						Grid.Column="6"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="12"
						HorizontalTextAlignment="Center"
						Text="Book"
						TextColor="#8E9095"
						VerticalTextAlignment="End" />
            </Grid>

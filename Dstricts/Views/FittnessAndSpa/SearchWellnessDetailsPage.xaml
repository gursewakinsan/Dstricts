                    <StackLayout
						Grid.Column="1"
						HorizontalOptions="CenterAndExpand"
						Spacing="5">
                        <Label
							Grid.Column="0"
							FontFamily="PoppinsMediumFontFamily"
							FontSize="14"
							HorizontalOptions="CenterAndExpand"
							Text="42,9 k"
							TextColor="White" />

                        <Label
							Grid.Column="0"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="13"
							HorizontalOptions="CenterAndExpand"
							Text="Followers"
							TextColor="#797A7D" />
                    </StackLayout>

                    <StackLayout
						Grid.Column="2"
						HorizontalOptions="EndAndExpand"
						Spacing="5">
                        <Label
							Grid.Column="0"
							FontFamily="PoppinsMediumFontFamily"
							FontSize="14"
							HorizontalOptions="CenterAndExpand"
							Text="{Binding FollowingCount}"
							TextColor="White" />

                        <Label
							Grid.Column="0"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="13"
							HorizontalOptions="CenterAndExpand"
							Text="Following"
							TextColor="#797A7D" />
                    </StackLayout>
                </Grid>

                <Button
					Grid.Row="1"
					Padding="0"
					BackgroundColor="{Binding FollowOrFollowingButtonBg}"
					BorderColor="#363541"
					BorderWidth="1"
                    CornerRadius="18"
					Command="{Binding WellnessUpdateFollowingCommand}"
					FontAttributes="Bold"
					FontFamily="PoppinsSemiBoldFontFamily"
					FontSize="12"

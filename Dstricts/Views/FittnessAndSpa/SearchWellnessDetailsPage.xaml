                    <RowDefinition Height="20"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="55"/>
                </Grid.ColumnDefinitions>

                <Label
					Grid.Row="0"
					Grid.Column="0"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="13"
					HorizontalTextAlignment="Start"
					Text="Scandic Continental enjoys a fantastic location in Stockholms city centre."
					TextColor="White"
                    Opacity="0.42"
                    LineHeight="1.1"
					VerticalTextAlignment="Center" />

                <Button
					Grid.Row="0"
					Grid.Column="1"
					BackgroundColor="Transparent"
					CornerRadius="6"
					FontFamily="CustomFontIconOne"
					FontSize="24"
                    BorderWidth="1"
                    HeightRequest="55"
                    WidthRequest="55"
                    BorderColor="#3D3F48"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
					Text="{x:Static fontawesome:DstrictsAppFlatIcons.Anglegraph}"
					TextColor="#8E9095" />

                <Label
					Grid.Row="2"
					Grid.Column="0"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="12"
					HorizontalTextAlignment="Start"
					Text="Open to 11pm"
					TextColor="White"
					VerticalTextAlignment="Center" />

                <Label
					Grid.Row="2"
					Grid.Column="1"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="12"
					HorizontalTextAlignment="Center"
					Text="Address"
					TextColor="White"
                    Opacity="0.42"
					VerticalTextAlignment="Center" />

                <Label
					Grid.Row="4"
					Grid.Column="0"
					FontFamily="PoppinsSemiBoldFontFamily"
					FontSize="15"
					HorizontalTextAlignment="Start"
					Text="Posts &amp; Videos"
					TextColor="White"
					VerticalTextAlignment="Center" />

                <Image
                   Grid.Row="6"
                    Margin="0,0,0,20"
                    Aspect="AspectFill"
					Grid.ColumnSpan="2" 
                    Source="imgEatAndDrink.png"/>
            </Grid>
        </ScrollView>
    </Grid>




















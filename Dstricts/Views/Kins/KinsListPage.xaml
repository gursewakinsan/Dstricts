<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Dstricts.Views.Kins.KinsListPage"
    xmlns:controls="clr-namespace:Dstricts.Controls"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
    ios:Page.UseSafeArea="True"
	BackgroundColor="Black"
	NavigationPage.HasNavigationBar="False">
    <Grid RowSpacing="0" ColumnSpacing="0" Padding="0,14,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="28" />
            <RowDefinition Height="50" />
            <RowDefinition Height="18" />
            <RowDefinition Height="0" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Label
			Grid.Row="0"
			Grid.Column="0"
			Margin="18,0,0,0"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="25"
			HorizontalTextAlignment="Start"
			Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronLeft}"
			TextColor="White"
			VerticalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}" />
            </Label.GestureRecognizers>
        </Label>

        <Label
			Grid.Row="0"
			Grid.Column="1"
			FontFamily="PoppinsRegularFontFamily"
			FontSize="14"
            Text="SOS Help"
			HorizontalTextAlignment="Center"
			TextColor="White"
			VerticalTextAlignment="Center" />

        <controls:CustomButton 
            Grid.Row="2" 
            Grid.ColumnSpan="2"
            Margin="28,0,0,0"
            CornerRadius="10"
            FontSize="12"
            TextColor="White"
            Padding="15,0,15,0"
            Text="From emergency list"
            HorizontalOptions="StartAndExpand"
            BackgroundColor="#242A37"
            FontFamily="PoppinsBoldFontFamily"/>

        <BoxView
		    Grid.Row="4"
		    Grid.ColumnSpan="3"
		    BackgroundColor="White"
		    HeightRequest="1"
		    Opacity="0.1" 
            Margin="28,0,28,0" />

        
        <Grid 
            IsVisible="{Binding IsLoadData}"
            RowSpacing="0" 
            ColumnSpacing="0" 
            Grid.Row="5" 
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="18"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="18"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>

            <CarouselView
			    x:Name="CarouselViewKins"
			    Grid.Row="1"
                Grid.Column="1"
                IsVisible="{Binding IsKinsList}"
			    BackgroundColor="Transparent"
			    HorizontalScrollBarVisibility="Never"
			    ItemsSource="{Binding KinsList}" >
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="20" />
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <controls:CustomFrame
		                        Padding="0"
                                Grid.Column="1"
                                Grid.Row="1"
		                        BackgroundColor="#242A37"
		                        CornerRadius="16"
		                        HasShadow="False"
		                        IsClippedToBounds="True"
                                IsVisible="{Binding IsMissing, Converter={StaticResource InverseBoolConverter}}">
                                <controls:CustomFrame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCustomFrameTapped"/>
                                </controls:CustomFrame.GestureRecognizers>
                                <Grid RowSpacing="0" ColumnSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="63"/>
                                    </Grid.RowDefinitions>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnCustomGridTapped"/>
                                    </Grid.GestureRecognizers>

                                    <StackLayout VerticalOptions="StartAndExpand" Grid.Row="0" Margin="26,21,26,5" Spacing="0">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnCustomStackLayoutTapped"/>
                                        </StackLayout.GestureRecognizers>
                                        <Grid ColumnSpacing="20" HeightRequest="3">
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnCustomGridTapped"/>
                                            </Grid.GestureRecognizers>
                                            <BoxView Grid.Column="0" BackgroundColor="White"/>
                                            <BoxView Grid.Column="1" BackgroundColor="White"/>
                                            <BoxView Grid.Column="2" BackgroundColor="White"/>
                                            <BoxView Grid.Column="3" BackgroundColor="White"/>
                                            <BoxView Grid.Column="4" BackgroundColor="White"/>
                                            <BoxView Grid.Column="5" BackgroundColor="White"/>
                                        </Grid>

                                        <ImageButton
                                            BackgroundColor="Transparent"
                                            CornerRadius="12"
                                            HeightRequest="242" 
                                            Margin="0,30,0,24" Aspect="Fill"
                                            Source="{Binding ImgUrl}"
                                            Clicked="OnCustomImageButtonTapped"/>

                                        <Label
			                                FontFamily="PoppinsRegularFontFamily"
			                                FontSize="18"
			                                HorizontalTextAlignment="Start"
			                                TextColor="White">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding FirstName}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{Binding LastName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                            </Label.GestureRecognizers>
                                        </Label>

                                        <Label Margin="0,5,0,40"
			                            FontFamily="PoppinsSemiBoldFontFamily"
			                            FontSize="15"
                                        Text="Missing for 35 days"
			                            HorizontalTextAlignment="Start"
			                            TextColor="White">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </StackLayout>

                                    <controls:CustomFrame
					                    Padding="0"
                                        Grid.Row="1"
					                    BackgroundColor="#B90303"
					                    CornerRadius="25,0,0,0"
					                    HasShadow="False"
                                        WidthRequest="120"
                                        HeightRequest="63"
                                        HorizontalOptions="EndAndExpand"
                                        VerticalOptions="EndAndExpand"
					                    IsClippedToBounds="True">
                                        <controls:CustomFrame.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnCustomFrameTapped"/>
                                        </controls:CustomFrame.GestureRecognizers>
                                        <StackLayout Margin="13,0,0,0"
                                            Orientation="Horizontal" 
                                            VerticalOptions="CenterAndExpand"
                                            HorizontalOptions="CenterAndExpand">
                                            <StackLayout.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnCustomStackLayoutTapped"/>
                                            </StackLayout.GestureRecognizers>
                                            <Label
						                        FontFamily="PoppinsSemiBoldFontFamily"
						                        FontSize="16"
						                        HorizontalTextAlignment="Center"
						                        Text="Select"
						                        TextColor="#FFFEFE"
						                        VerticalTextAlignment="Center">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                                </Label.GestureRecognizers>
                                            </Label>

                                            <Label
						                        FontFamily="{StaticResource MaterialFontFamily}"
						                        FontSize="22"
						                        HorizontalTextAlignment="Center"
						                        Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronRight}"
						                        TextColor="White"
						                        VerticalTextAlignment="Center">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </StackLayout>
                                    </controls:CustomFrame>
                                </Grid>
                            </controls:CustomFrame>

                            <controls:CustomFrame
		                        Padding="0"
		                        BackgroundColor="#F4B400"
		                        CornerRadius="16"
		                        HasShadow="False"
		                        IsClippedToBounds="True"
                                IsVisible="{Binding IsMissing}">
                                <Grid RowSpacing="0" ColumnSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="63"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <StackLayout VerticalOptions="StartAndExpand" Grid.Row="0" Margin="26,21,26,20" Spacing="0">
                                        <Grid ColumnSpacing="20" HeightRequest="3">
                                            <BoxView Grid.Column="0" BackgroundColor="#2D2D2D"/>
                                            <BoxView Grid.Column="1" BackgroundColor="#2D2D2D"/>
                                            <BoxView Grid.Column="2" BackgroundColor="#2D2D2D"/>
                                            <BoxView Grid.Column="3" BackgroundColor="#2D2D2D"/>
                                            <BoxView Grid.Column="4" BackgroundColor="#2D2D2D"/>
                                            <BoxView Grid.Column="5" BackgroundColor="#2D2D2D"/>
                                        </Grid>

                                        <Grid HeightRequest="242" Margin="0,30,0,24">
                                            <ImageButton
                                                Grid.Row="0"
                                                BackgroundColor="Black"
                                                CornerRadius="12"
                                                Aspect="Fill"
                                                Source="{Binding Kin.ImgUrl}"/>

                                            <controls:CustomFrame
					                            Padding="0"
                                                Grid.Row="0" 
                                                Margin="0,0,0,-1"
					                            BackgroundColor="#B90303"
					                            CornerRadius="25,0,0,0"
					                            HasShadow="False"
                                                WidthRequest="100"
                                                HeightRequest="63"
                                                HorizontalOptions="EndAndExpand"
                                                VerticalOptions="EndAndExpand"
					                            IsClippedToBounds="True">
                                                <Label 
                                                    Margin="5,0,0,0"
						                            FontFamily="PoppinsSemiBoldFontFamily"
						                            FontSize="16"
						                            HorizontalTextAlignment="Center"
						                            Text="Missing"
						                            TextColor="#FFFEFE"
						                            VerticalTextAlignment="Center"/>
                                            </controls:CustomFrame>
                                        </Grid>

                                        <Label
			                                FontFamily="PoppinsRegularFontFamily"
			                                FontSize="18"
			                                HorizontalTextAlignment="Start"
			                                TextColor="Black">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding FirstName}"/>
                                                    <Span Text=" "/>
                                                    <Span Text="{Binding LastName}"/>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Label Margin="0,5,0,40"
			                                FontFamily="PoppinsSemiBoldFontFamily"
			                                FontSize="15"
                                            Text="Missing for 35 days"
			                                HorizontalTextAlignment="Start"
			                                TextColor="Black"/>
                                    </StackLayout>

                                    <controls:CustomFrame
					                    Padding="10,0,10,0"
                                        Grid.Row="1"
					                    BackgroundColor="#171C26"
					                    CornerRadius="10"
					                    HasShadow="False"
                                        WidthRequest="120"
                                        HeightRequest="64" Margin="24,0,24,0"
                                        VerticalOptions="EndAndExpand"
					                    IsClippedToBounds="True">
                                        <Grid VerticalOptions="CenterAndExpand">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                            </Grid.ColumnDefinitions>
                                            <Label 
                                                Grid.Column="0"
						                        FontFamily="PoppinsRegularFontFamily"
						                        FontSize="14"
						                        HorizontalTextAlignment="Start"
						                        Text="Stay informed"
						                        TextColor="#FFFEFE"
						                        VerticalTextAlignment="Center"/>

                                            <Label
			                                    Grid.Column="1"
			                                    FontFamily="{StaticResource MaterialFontFamily}"
			                                    FontSize="50"
			                                    HorizontalTextAlignment="End"
			                                    Text="{x:Static fontawesome:DstrictsAppFlatIcons.ToggleSwitch}"
			                                    TextColor="#F40000"
			                                    VerticalTextAlignment="Start" 
                                                IsVisible="{Binding IsNotificationRequired}">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnToggleOnOffTapped"/>
                                                </Label.GestureRecognizers>
                                            </Label>

                                            <Label
			                                    Grid.Column="1"
			                                    FontFamily="{StaticResource MaterialFontFamily}"
			                                    FontSize="50"
			                                    HorizontalTextAlignment="End"
			                                    Text="{x:Static fontawesome:DstrictsAppFlatIcons.ToggleSwitchOff}"
			                                    TextColor="#F40000"
			                                    VerticalTextAlignment="Start" 
                                                IsVisible="{Binding IsNotificationRequired, Converter={StaticResource InverseBoolConverter}}">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnToggleOnOffTapped"/>
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </Grid>
                                    </controls:CustomFrame>
                                    <BoxView Grid.Row="2" HeightRequest="20"/>
                                </Grid>
                            </controls:CustomFrame>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <controls:CustomButton
                Grid.Row="3"
                Grid.Column="1"
                CornerRadius="30"
                FontSize="16"
                TextColor="White"
                Text="Go back"
                BackgroundColor="#242A37"
                FontFamily="PoppinsSemiBoldFontFamily"
                Command="{Binding CloseCommand}"
                IsVisible="{Binding IsKinsList, Converter={StaticResource InverseBoolConverter}}"/>

            <controls:CustomFrame
			    Padding="15,0,15,0"
                Grid.Row="3"
                Grid.Column="1"
			    BackgroundColor="#242A37"
			    HasShadow="False"
                WidthRequest="120"
                HeightRequest="63"
                CornerRadius="30"
			    IsClippedToBounds="True" 
                IsVisible="{Binding IsKinsList}">
                <Grid ColumnSpacing="0">
                    <Label
                        Grid.Column="0"
				        FontFamily="{StaticResource MaterialFontFamily}"
				        FontSize="25"
				        HorizontalTextAlignment="Start"
				        Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronLeft}"
				        TextColor="White"
				        VerticalTextAlignment="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnArrowLeftTapped"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label
                        Grid.Column="1"
				        FontFamily="{StaticResource MaterialFontFamily}"
				        FontSize="25"
				        HorizontalTextAlignment="End"
				        Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronRight}"
				        TextColor="White"
				        VerticalTextAlignment="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnArrowRightTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
            </controls:CustomFrame>

            <StackLayout 
                Grid.Row="1"
                Grid.Column="1"
                IsVisible="{Binding IsKinsList, Converter={StaticResource InverseBoolConverter}}">
                <controls:CustomFrame
		            Padding="0"
		            BackgroundColor="#242A37"
		            CornerRadius="16"
		            HasShadow="False"
		            IsClippedToBounds="True"
                    IsVisible="{Binding Kin.IsMissing, Converter={StaticResource InverseBoolConverter}}">
                    <controls:CustomFrame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCustomFrameTapped"/>
                    </controls:CustomFrame.GestureRecognizers>
                    <Grid RowSpacing="0" ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="63"/>
                        </Grid.RowDefinitions>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCustomGridTapped"/>
                        </Grid.GestureRecognizers>

                        <StackLayout VerticalOptions="StartAndExpand" Grid.Row="0" Margin="26,21,26,5" Spacing="0">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCustomStackLayoutTapped"/>
                            </StackLayout.GestureRecognizers>
                            <Grid ColumnSpacing="20" HeightRequest="3">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCustomGridTapped"/>
                                </Grid.GestureRecognizers>
                                <BoxView Grid.Column="0" BackgroundColor="White"/>
                                <BoxView Grid.Column="1" BackgroundColor="White"/>
                                <BoxView Grid.Column="2" BackgroundColor="White"/>
                                <BoxView Grid.Column="3" BackgroundColor="White"/>
                                <BoxView Grid.Column="4" BackgroundColor="White"/>
                                <BoxView Grid.Column="5" BackgroundColor="White"/>
                            </Grid>

                            <ImageButton
                                        BackgroundColor="Transparent"
                                        CornerRadius="12"
                                        HeightRequest="242" 
                                        Margin="0,30,0,24" Aspect="Fill"
                                        Source="{Binding Kin.ImgUrl}"
                                        Clicked="OnCustomImageButtonTapped"/>

                            <Label
			                            FontFamily="PoppinsRegularFontFamily"
			                            FontSize="18"
			                            HorizontalTextAlignment="Start"
			                            TextColor="White">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Kin.FirstName}"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Kin.LastName}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                </Label.GestureRecognizers>
                            </Label>

                            <Label Margin="0,5,0,40"
			                            FontFamily="PoppinsSemiBoldFontFamily"
			                            FontSize="15"
                                        Text="Missing for 35 days"
			                            HorizontalTextAlignment="Start"
			                            TextColor="White">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>

                        <controls:CustomFrame
					                Padding="0"
                                    Grid.Row="1"
					                BackgroundColor="#B90303"
					                CornerRadius="25,0,0,0"
					                HasShadow="False"
                                    WidthRequest="120"
                                    HeightRequest="63"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="EndAndExpand"
					                IsClippedToBounds="True">
                            <controls:CustomFrame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCustomFrameTapped"/>
                            </controls:CustomFrame.GestureRecognizers>
                            <StackLayout Margin="13,0,0,0"
                                        Orientation="Horizontal" 
                                        VerticalOptions="CenterAndExpand"
                                        HorizontalOptions="CenterAndExpand">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCustomStackLayoutTapped"/>
                                </StackLayout.GestureRecognizers>
                                <Label
						                    FontFamily="PoppinsSemiBoldFontFamily"
						                    FontSize="16"
						                    HorizontalTextAlignment="Center"
						                    Text="Select"
						                    TextColor="#FFFEFE"
						                    VerticalTextAlignment="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>

                                <Label
						                    FontFamily="{StaticResource MaterialFontFamily}"
						                    FontSize="22"
						                    HorizontalTextAlignment="Center"
						                    Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronRight}"
						                    TextColor="White"
						                    VerticalTextAlignment="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnCustomLabelTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                        </controls:CustomFrame>
                    </Grid>
                </controls:CustomFrame>

                <controls:CustomFrame
		                    Padding="0"
		                    BackgroundColor="#F4B400"
		                    CornerRadius="16"
		                    HasShadow="False"
		                    IsClippedToBounds="True"
                    IsVisible="{Binding Kin.IsMissing}">
                    <Grid RowSpacing="0" ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="63"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <StackLayout VerticalOptions="StartAndExpand" Grid.Row="0" Margin="26,21,26,20" Spacing="0">
                            <Grid ColumnSpacing="20" HeightRequest="3">
                                <BoxView Grid.Column="0" BackgroundColor="#2D2D2D"/>
                                <BoxView Grid.Column="1" BackgroundColor="#2D2D2D"/>
                                <BoxView Grid.Column="2" BackgroundColor="#2D2D2D"/>
                                <BoxView Grid.Column="3" BackgroundColor="#2D2D2D"/>
                                <BoxView Grid.Column="4" BackgroundColor="#2D2D2D"/>
                                <BoxView Grid.Column="5" BackgroundColor="#2D2D2D"/>
                            </Grid>

                            <Grid HeightRequest="242" Margin="0,30,0,24">
                                <ImageButton
                                    Grid.Row="0"
                                        BackgroundColor="Black"
                                        CornerRadius="12"
                                         Aspect="Fill"
                                        Source="{Binding Kin.ImgUrl}"/>

                                <controls:CustomFrame
					                Padding="0"
                                    Grid.Row="0" Margin="0,0,0,-1"
					                BackgroundColor="#B90303"
					                CornerRadius="25,0,0,0"
					                HasShadow="False"
                                    WidthRequest="100"
                                    HeightRequest="63"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="EndAndExpand"
					                IsClippedToBounds="True">
                                    <Label Margin="5,0,0,0"
						                    FontFamily="PoppinsSemiBoldFontFamily"
						                    FontSize="16"
						                    HorizontalTextAlignment="Center"
						                    Text="Missing"
						                    TextColor="#FFFEFE"
						                    VerticalTextAlignment="Center"/>
                                </controls:CustomFrame>
                            </Grid>


                            <Label
			                            FontFamily="PoppinsRegularFontFamily"
			                            FontSize="18"
			                            HorizontalTextAlignment="Start"
			                            TextColor="Black">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Kin.FirstName}"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Kin.LastName}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label Margin="0,5,0,40"
			                            FontFamily="PoppinsSemiBoldFontFamily"
			                            FontSize="15"
                                        Text="Missing for 35 days"
			                            HorizontalTextAlignment="Start"
			                            TextColor="Black"/>
                        </StackLayout>

                        <controls:CustomFrame
					                Padding="10,0,10,0"
                                    Grid.Row="1"
					                BackgroundColor="#171C26"
					                CornerRadius="10"
					                HasShadow="False"
                                    WidthRequest="120"
                                    HeightRequest="64" Margin="24,0,24,0"
                                    VerticalOptions="EndAndExpand"
					                IsClippedToBounds="True">
                            <Grid VerticalOptions="CenterAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Label 
                                    Grid.Column="0"
						                    FontFamily="PoppinsRegularFontFamily"
						                    FontSize="14"
						                    HorizontalTextAlignment="Start"
						                    Text="Stay informed"
						                    TextColor="#FFFEFE"
						                    VerticalTextAlignment="Center"/>

                                <Label
			                        Grid.Column="1"
			                        FontFamily="{StaticResource MaterialFontFamily}"
			                        FontSize="50"
			                        HorizontalTextAlignment="End"
			                        Text="{x:Static fontawesome:DstrictsAppFlatIcons.ToggleSwitch}"
			                        TextColor="#F40000"
			                        VerticalTextAlignment="Start"
                                    IsVisible="{Binding Kin.IsNotificationRequired}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnKinToggleOnOffTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>

                                <Label
			                        Grid.Column="1"
			                        FontFamily="{StaticResource MaterialFontFamily}"
			                        FontSize="50"
			                        HorizontalTextAlignment="End"
			                        Text="{x:Static fontawesome:DstrictsAppFlatIcons.ToggleSwitchOff}"
			                        TextColor="#F40000"
			                        VerticalTextAlignment="Start" 
                                    IsVisible="{Binding Kin.IsNotificationRequired, Converter={StaticResource InverseBoolConverter}}">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnKinToggleOnOffTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </controls:CustomFrame>

                        <BoxView Grid.Row="2" HeightRequest="20"/>
                    </Grid>
                </controls:CustomFrame>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="13" />
                                <RowDefinition Height="44"/>
                                <RowDefinition Height="0" />
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="1"
								Grid.Column="0"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Settings}"
								TextColor="#F4B400"
								VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToHouseRulesPageCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                 Grid.Row="1"
								Grid.Column="1"
								FontFamily="PoppinsRegularFontFamily"
								FontSize="16"
								HorizontalTextAlignment="Start"
								Text="House rules"
								TextColor="White"
								VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToHouseRulesPageCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                 Grid.Row="1"
								Grid.Column="2"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="25"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronRight}"
								TextColor="White"
								Opacity="0.70"
								VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToHouseRulesPageCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <BoxView
								Grid.Row="3"
								Grid.Column="0"
								Grid.ColumnSpan="3"
								WidthRequest="252"
								HorizontalOptions="EndAndExpand"
								BackgroundColor="#2A2A31" />
                        </Grid>

                        <Grid
							ColumnSpacing="28"
							Grid.Row="10"  
							Grid.Column="1"
							Grid.ColumnSpan="4" 
                            IsVisible="{Binding SelectedCheckedIn.IsGuest}">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer  />

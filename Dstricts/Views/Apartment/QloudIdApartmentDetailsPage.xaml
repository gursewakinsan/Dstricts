									Grid.Column="1"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="14"
									HorizontalTextAlignment="Start"
									Opacity="0.42"
									Text="Click on the box for instructions"
									TextColor="White"
									VerticalTextAlignment="Start" />

                                <ScrollView HorizontalScrollBarVisibility="Never" Grid.Row="4" Grid.Column="1">
                                    <StackLayout
                                        Orientation="Horizontal"
                                        BindableLayout.ItemsSource="{Binding HowToSwitchInfo}"
                                        HorizontalOptions="StartAndExpand" Spacing="39">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
												<Grid RowSpacing="0" ColumnSpacing="0">
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="80"/>
													</Grid.ColumnDefinitions>
													<Grid.RowDefinitions>
														<RowDefinition Height="63"/>
													</Grid.RowDefinitions>
													<Button
														Grid.Row="0"
														Grid.Column="0"
														BorderWidth="2"
														BorderColor="#F4B400"
														CornerRadius="10"
														Padding="0"
														FontFamily="PoppinsRegularFontFamily"
														Clicked="OnHowToSwitchInfoItemClicked"
														BackgroundColor="Transparent"/>

													<Label
														VerticalTextAlignment="Center"
														HorizontalTextAlignment="Center"
														FontFamily="PoppinsBoldFontFamily"
														FontSize="12"
														Grid.Row="0"
														Grid.Column="0"
														Text="{Binding DisplayGetStartedTitle}"
														TextColor="White">
														<Label.GestureRecognizers>
															<TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
														</Label.GestureRecognizers>
														</Label>
												</Grid>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </StackLayout>
                                </ScrollView>
                            </Grid>
                        </controls:CustomFrame>

                        <controls:CustomFrame
							Grid.Row="0"
                            Grid.Column="0" 
                            Grid.ColumnSpan="6" 
							Padding="0,35,0,0"
							BackgroundColor="#1B1D24"
							CornerRadius="38,38,0,0"
							HasShadow="False"
							IsClippedToBounds="True"
							IsVisible="{Binding SelectedCheckedIn.IsOwner}">
                            <Frame.Background>
                                <LinearGradientBrush EndPoint="0,0.5">
                                    <GradientStop Offset="0.1" Color="#5E5F67" />
                                    <GradientStop Offset="1.0" Color="#1B1D24" />
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Grid RowSpacing="0" ColumnSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="9"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="23"/>
                                    <RowDefinition Height="63"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="28"/>
                                </Grid.ColumnDefinitions>
                                <Label
									Grid.Row="0"
                                    Grid.Column="1"
									FontAttributes="Bold"
									FontFamily="PoppinsBoldFontFamily"
									FontSize="24"
									HorizontalTextAlignment="Start"
									MaxLines="1"
									Text="Profile"
									TextColor="White"/>

                                <Label
									Grid.Row="2"
									Grid.Column="1"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="14"
									HorizontalTextAlignment="Start"
									Opacity="0.42"
									Text="Click on each profile to get more information"
									TextColor="White"
									VerticalTextAlignment="Start" />

                                <Grid Grid.Row="4" Grid.Column="1" RowSpacing="0" ColumnSpacing="17">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="63"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="95"/>
                                        <ColumnDefinition Width="95"/>
                                        <ColumnDefinition Width="95"/>
                                    </Grid.ColumnDefinitions>
                                    <Button
										Grid.Row="0"
										Grid.Column="0"
										CornerRadius="10"
										Padding="0"
                                        Text="Owner"
                                        FontSize="14"
                                        TextColor="Black"
										FontFamily="PoppinsBoldFontFamily"
										BackgroundColor="#F4B400"/>

                                    <Button
										Grid.Row="0"
										Grid.Column="1"
										CornerRadius="10"
										Padding="0"
                                        Text="Rent out"
                                        FontSize="12"
                                        TextColor="White"
                                        BorderWidth="2"
                                        BorderColor="White"
										FontFamily="PoppinsBoldFontFamily"
										BackgroundColor="Transparent"/>

                                    <Button
										Grid.Row="0"
										Grid.Column="2"
										CornerRadius="10"
										Padding="0"
                                        Text="Selling"
                                        FontSize="12"
                                        TextColor="White"
                                        BorderWidth="2"
                                        BorderColor="White"
										FontFamily="PoppinsBoldFontFamily"
										BackgroundColor="Transparent"/>
                                </Grid>
                            </Grid>
                        </controls:CustomFrame>

                        <Label
							Grid.Row="2"
							Grid.Column="1"
							Grid.ColumnSpan="4"
							FontAttributes="Bold"
							FontFamily="PoppinsBoldFontFamily"
							FontSize="20"
							HorizontalTextAlignment="Start"
							MaxLines="1"
							Text="Welcome"
							TextColor="White"
							VerticalTextAlignment="Center" />

                        <Label
							Grid.Row="4"
							Grid.Column="1"
							Grid.ColumnSpan="4"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="14"
							HorizontalTextAlignment="Start"
							LineBreakMode="TailTruncation"
							LineHeight="1.2"
							MaxLines="3"
							Opacity="0.42"
							Text="{Binding ApartmentDetailInfo.ApartmentDescription}"
							TextColor="White"
							VerticalTextAlignment="Start" />

                        <BoxView
							Grid.Row="6"
							Grid.Column="1"
							Grid.ColumnSpan="4"
							BackgroundColor="#2A2A31" />

                        <Grid 
                            IsVisible="{Binding ApartmentDetailInfo.IsWifiAvailable}"
							ColumnSpacing="28"
							Grid.Row="8"  
							Grid.Column="1"
							Grid.ColumnSpan="4">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToHouseWifiPageCommand}" />
                            </Grid.GestureRecognizers>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="13" />
                                <RowDefinition Height="44"/>
                                <RowDefinition Height="0" />
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="1"
								Grid.Column="0"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Settings}"
								TextColor="#F4B400"
								VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToHouseWifiPageCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                 Grid.Row="1"
								Grid.Column="1"
								FontFamily="PoppinsRegularFontFamily"
								FontSize="16"
								HorizontalTextAlignment="Start"
								Text="House Wi-Fi"
								TextColor="White"
								VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToHouseWifiPageCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                 Grid.Row="1"
								Grid.Column="2"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="25"
								HorizontalTextAlignment="Center"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronRight}"
								TextColor="White"
								Opacity="0.70"
								VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding GoToHouseWifiPageCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <BoxView
							Grid.Row="3"
							Grid.Column="0"
							Grid.ColumnSpan="3"
							WidthRequest="252"
							HorizontalOptions="EndAndExpand"
							BackgroundColor="#2A2A31" />
                        </Grid>

                        <Grid
							ColumnSpacing="28"
							Grid.Row="9"  
							Grid.Column="1"
							Grid.ColumnSpan="4">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToHouseRulesPageCommand}" />

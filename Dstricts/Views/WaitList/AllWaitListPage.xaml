                                                <RowDefinition Height="56" />
                                                <RowDefinition Height="16" />
                                            </Grid.RowDefinitions>

                                            <StackLayout
												Grid.Row="1"
												Margin="16,0,16,0"
												Orientation="Horizontal"
												Spacing="0">

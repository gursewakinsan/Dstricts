													FontAttributes="Bold"
													FontFamily="PoppinsBoldFontFamily"
													FontSize="17"
													LineBreakMode="TailTruncation"
													MaxLines="1"
													TextColor="White"
													VerticalOptions="CenterAndExpand">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="{Binding WaitingCount}" />
                                                            <Span Text=" Before" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnLabelAllWaitListTapped" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </StackLayout>
                                        </Frame>
                                    </Grid>
                                </Grid>
                            </Frame>

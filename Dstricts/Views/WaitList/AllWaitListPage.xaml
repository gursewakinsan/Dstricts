													FontAttributes="Bold"
													FontFamily="PoppinsBoldFontFamily"
													FontSize="16"
													HorizontalOptions="StartAndExpand"
													LineBreakMode="TailTruncation"
													MaxLines="1"
													Text="{Binding PropertyNickName}"
													TextColor="White"
													VerticalOptions="CenterAndExpand">

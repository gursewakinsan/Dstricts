													TextColor="#FF8A5D"
													VerticalOptions="CenterAndExpand">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnLabelAllWaitListTapped" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </StackLayout>

                                            <Frame
												Grid.Row="3"
												Margin="16,0,39,0"
												Padding="0"
												BackgroundColor="Transparent"
												BorderColor="#737B8C"
												CornerRadius="28"
												HasShadow="False"
												IsClippedToBounds="True">
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnFrameAllWaitListTapped" />
                                                </Frame.GestureRecognizers>
                                                <StackLayout
													HorizontalOptions="CenterAndExpand"
													Orientation="Horizontal"
													Spacing="5"
													VerticalOptions="CenterAndExpand">
                                                    <Label
														Padding="0"
														FontFamily="{StaticResource MaterialFontFamily}"
														FontSize="23"
														Text="{x:Static fontawesome:DstrictsAppFlatIcons.HomeOutline}"
														TextColor="White">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="OnLabelAllWaitListTapped" />
                                                        </Label.GestureRecognizers>
                                                    </Label>

                                                    <Label
														FontAttributes="Bold"
														FontFamily="PoppinsBoldFontFamily"
														FontSize="17"
														LineBreakMode="TailTruncation"
														MaxLines="1"
														TextColor="White"
														VerticalOptions="CenterAndExpand">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding WaitingCount}" />
                                                                <Span Text=" Before" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="OnLabelAllWaitListTapped" />
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                </StackLayout>
                                            </Frame>
                                        </Grid>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </ScrollView>

                <Button
					Grid.Row="1"
					Grid.Column="1"
					Padding="0"
					BackgroundColor="Transparent"
					BorderColor="White"
					BorderWidth="2"
					CornerRadius="10"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="12"
					HeightRequest="45"
					HorizontalOptions="CenterAndExpand"
					Text="Scan QR Code"
					TextColor="White"
					VerticalOptions="CenterAndExpand"
					WidthRequest="134" />
            </Grid>
        </controls:CustomFrame>
    </Grid>



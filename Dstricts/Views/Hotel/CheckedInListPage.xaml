			<ListView
				x:Name="listCheckedIn"
				Grid.Row="1"
				Margin="20,0,20,10"
				BackgroundColor="White"
				HasUnevenRows="True"
				IsVisible="{Binding IsListEmpty}"
				ItemTapped="OnCheckedInItemTapped"

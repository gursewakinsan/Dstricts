<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.Hotel.HotelDetailsPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Dstricts.Controls"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="Black"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="80" />
			</Grid.ColumnDefinitions>
			<Label
				Grid.Row="0"
				Grid.Column="0"
				Margin="15,0,0,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Start"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.ArrowLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<ScrollView
				Grid.Row="1"
				Grid.ColumnSpan="3"
				VerticalScrollBarVisibility="Never">
				<Grid ColumnSpacing="0" RowSpacing="5">
					<Grid.RowDefinitions>
						<RowDefinition Height="40" />
						<RowDefinition Height="25" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="50" />
						<RowDefinition Height="90" />
						<RowDefinition Height="50" />
						<RowDefinition Height="150" />
						<RowDefinition Height="50" />
						<RowDefinition Height="150" />
						<RowDefinition Height="50" />
					</Grid.RowDefinitions>
					<Label
						Grid.Row="0"
						Padding="15,0,0,0"
						FontFamily="{StaticResource SansProBoldFontFamily}"
						FontSize="34"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="Welcome"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="1"
						Padding="15,0,0,0"
						FontFamily="{StaticResource SansProRegularFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="{Binding UserName}"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="2"
						Padding="15,5,15,0"
						FontFamily="{StaticResource SansProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="I have prepared a list of service we can provide to enhance your stay. Information about the hotel or your payment can be found below."
						TextColor="White"
						VerticalTextAlignment="Start" />

					<Label
						Grid.Row="3"
						Padding="15,5,15,0"
						FontFamily="{StaticResource SansProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Text="We wish you a pleasant stay and don't hesitate to reach out to us for help."
						TextColor="White"
						VerticalTextAlignment="Start" />

					<Frame
						Grid.Row="4"
						Margin="15,10,15,0"
						Padding="0,10,0,10"
						BackgroundColor="#1A1C2A"
						BorderColor="#1A1C2A"
						CornerRadius="10"
						HasShadow="False"
						IsClippedToBounds="True"
						VerticalOptions="StartAndExpand">
						<Grid ColumnSpacing="0" RowSpacing="10">
							<Grid.RowDefinitions>
								<RowDefinition Height="60" />
								<RowDefinition Height="200" />
								<RowDefinition Height="40" />
								<RowDefinition Height="auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="70" />
								<ColumnDefinition />
								<ColumnDefinition Width="40" />
							</Grid.ColumnDefinitions>
							<Button
								Grid.Row="0"
								Grid.Column="0"
								Padding="0"
								BackgroundColor="Black"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="35"
								HeightRequest="50"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Star}"
								TextColor="#FFDF00"
								VerticalOptions="CenterAndExpand"
								WidthRequest="50" />

							<StackLayout
								Grid.Row="0"
								Grid.Column="1"
								Margin="5,0,0,0"
								Spacing="5"
								VerticalOptions="CenterAndExpand">
								<Label
									FontFamily="{StaticResource SansProBoldFontFamily}"
									FontSize="14"
									HorizontalTextAlignment="Start"
									Text="{Binding HotelDetails.PropertyNickName}"
									TextColor="White"
									VerticalTextAlignment="Center" />
								<StackLayout Orientation="Horizontal" Spacing="0">
									<Label
										Margin="0,0,5,0"
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="12"
										HorizontalTextAlignment="Start"
										Text="{x:Static fontawesome:DstrictsAppFlatIcons.MapMarker}"
										TextColor="White"
										VerticalTextAlignment="Center" />

									<Label
										FontFamily="{StaticResource SansProRegularFontFamily}"
										FontSize="12"
										HorizontalTextAlignment="Start"
										MaxLines="1"
										Text="{Binding HotelDetails.Address}"
										TextColor="White"
										VerticalTextAlignment="Center" />
								</StackLayout>
							</StackLayout>

							<Button
								Grid.Row="0"
								Grid.Column="2"
								Padding="0"
								BackgroundColor="Transparent"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="32"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.DotsHorizontal}"
								TextColor="White"
								VerticalOptions="StartAndExpand" />

							<CarouselView
								x:Name="cardCarouselView"
								Grid.Row="1"
								Grid.ColumnSpan="3"
								BackgroundColor="Transparent"
								HeightRequest="200"
								HorizontalScrollBarVisibility="Never"
								IndicatorView="indicatorView"
								VerticalOptions="CenterAndExpand">
								<CarouselView.ItemTemplate>
									<DataTemplate>
										<Image
											Aspect="AspectFill"
											HeightRequest="200"
											Source="{Binding URL}" />
									</DataTemplate>
								</CarouselView.ItemTemplate>
							</CarouselView>

							<IndicatorView
								x:Name="indicatorView"
								Grid.Row="1"
								Grid.ColumnSpan="3"
								Margin="0,0,0,10"
								HorizontalOptions="CenterAndExpand"
								IndicatorColor="#9DA4B3"
								SelectedIndicatorColor="#FE2042"
								VerticalOptions="EndAndExpand" />

							<StackLayout Grid.Row="2" Grid.ColumnSpan="3">
								<Grid ColumnSpacing="0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="50" />
										<ColumnDefinition Width="40" />
										<ColumnDefinition Width="50" />
										<ColumnDefinition Width="40" />
										<ColumnDefinition Width="50" />
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="50" />
									</Grid.ColumnDefinitions>
									<Button
										Grid.Column="0"
										Padding="0"
										BackgroundColor="Transparent"
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="32"
										Text="{x:Static fontawesome:DstrictsAppFlatIcons.Heart}"
										TextColor="#FE2042" />

									<Label
										Grid.Column="1"
										FontFamily="{StaticResource SansProRegularFontFamily}"
										FontSize="14"
										HorizontalTextAlignment="Start"
										Text="534"
										TextColor="White"
										VerticalTextAlignment="Center" />

									<Button
										Grid.Column="2"
										Padding="0"
										BackgroundColor="Transparent"
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="32"
										Text="{x:Static fontawesome:DstrictsAppFlatIcons.Chat}"
										TextColor="#9DA4B3" />

									<Label
										Grid.Column="3"
										FontFamily="{StaticResource SansProRegularFontFamily}"
										FontSize="14"
										HorizontalTextAlignment="Start"
										Text="25"
										TextColor="White"
										VerticalTextAlignment="Center" />

									<Button
										Grid.Column="4"
										Padding="0"
										BackgroundColor="Transparent"
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="32"
										Text="{x:Static fontawesome:DstrictsAppFlatIcons.ShareOutline}"
										TextColor="#9DA4B3" />

									<Button
										Grid.Column="6"
										Padding="0"
										BackgroundColor="Transparent"
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="32"
										HorizontalOptions="EndAndExpand"
										Text="{x:Static fontawesome:DstrictsAppFlatIcons.StarOutline}"
										TextColor="#9DA4B3" />
								</Grid>
							</StackLayout>

							<Label
								Grid.Row="3"
								Grid.ColumnSpan="3"
								Margin="15,0,15,10"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="14"
								HorizontalTextAlignment="Start"
								Text="Spent all day in this cozy place with my laptop. Undoubtedly the best place for work."
								TextColor="White"
								VerticalTextAlignment="Center" />
						</Grid>
					</Frame>

					<Label
						Grid.Row="5"
						Padding="15,0,0,0"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						TextColor="White"
						VerticalTextAlignment="Center">
						<Label.FormattedText>
							<FormattedString>
								<Span
									FontFamily="{StaticResource SansProBoldFontFamily}"
									FontSize="34"
									Text="Guest " />
								<Span
									FontFamily="{StaticResource SansProRegularFontFamily}"
									FontSize="34"
									Text="Services" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<ScrollView
						Grid.Row="6"
						Margin="15,0,15,0"
						HorizontalScrollBarVisibility="Never"
						Orientation="Horizontal">
						<Grid ColumnSpacing="20">
							<Grid.RowDefinitions>
								<RowDefinition Height="60" />
								<RowDefinition Height="auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="60" />
								<ColumnDefinition Width="60" />
								<ColumnDefinition Width="60" />
								<ColumnDefinition Width="60" />
								<ColumnDefinition Width="60" />
							</Grid.ColumnDefinitions>
							<Button
								Grid.Row="0"
								Grid.Column="0"
								Padding="0"
								BackgroundColor="Transparent"
								BorderColor="White"
								BorderWidth="1"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="30"
								HeightRequest="60"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.ShieldStar}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="0"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Popular"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Button
								Grid.Row="0"
								Grid.Column="1"
								Padding="0"
								BackgroundColor="Transparent"
								BorderColor="White"
								BorderWidth="1"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="30"
								HeightRequest="60"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.RoomService}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="1"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Room"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Button
								Grid.Row="0"
								Grid.Column="2"
								Padding="0"
								BackgroundColor="Transparent"
								BorderColor="White"
								BorderWidth="1"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="30"
								HeightRequest="60"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Bed}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="2"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Bed"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Button
								Grid.Row="0"
								Grid.Column="3"
								Padding="0"
								BackgroundColor="Transparent"
								BorderColor="White"
								BorderWidth="1"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="30"
								HeightRequest="60"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.ScaleBathroom}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="3"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Bathroom"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Button
								Grid.Row="0"
								Grid.Column="4"
								Padding="0"
								BackgroundColor="Transparent"
								BorderColor="White"
								BorderWidth="1"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="30"
								HeightRequest="60"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.ElectronFramework}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="4"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Electronics"
								TextColor="White"
								VerticalTextAlignment="Center" />
						</Grid>

					</ScrollView>

					<Label
						Grid.Row="7"
						Padding="15,0,0,0"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						TextColor="White"
						VerticalTextAlignment="Center">
						<Label.FormattedText>
							<FormattedString>
								<Span
									FontFamily="{StaticResource SansProBoldFontFamily}"
									FontSize="34"
									Text="{Binding EatAndDrinkText}" />
								<Span
									FontFamily="{StaticResource SansProRegularFontFamily}"
									FontSize="34"
									Text=" @ Hotel" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<ScrollView
						Grid.Row="8"
						Margin="15,0,15,0"
						HorizontalScrollBarVisibility="Never"
						Orientation="Horizontal">
						<StackLayout x:Name="layoutEatAndDrink" Orientation="Horizontal">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Grid Margin="0,0,20,0">
										<ImageButton
											Padding="0"
											Aspect="Fill"
											CornerRadius="18"
											HeightRequest="150"
											Source="{Binding URL}"
											WidthRequest="220" />

										<Label
											Grid.Row="0"
											FontFamily="{StaticResource SansProRegularFontFamily}"
											FontSize="20"
											HorizontalTextAlignment="Center"
											LineBreakMode="TailTruncation"
											MaxLines="1"
											Text="{Binding Name}"
											TextColor="#FE2042"
											VerticalTextAlignment="Center" />
									</Grid>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>
					</ScrollView>

					<Label
						Grid.Row="9"
						Padding="15,0,0,0"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						TextColor="White"
						VerticalTextAlignment="Center">
						<Label.FormattedText>
							<FormattedString>
								<Span
									FontFamily="{StaticResource SansProBoldFontFamily}"
									FontSize="34"
									Text="Wellness " />
								<Span
									FontFamily="{StaticResource SansProRegularFontFamily}"
									FontSize="34"
									Text="@ Hotel" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<ScrollView
						Grid.Row="10"
						Margin="15,0,15,0"
						HorizontalScrollBarVisibility="Never"
						Orientation="Horizontal">
						<StackLayout x:Name="layoutWellness" Orientation="Horizontal">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Grid Margin="0,0,20,0">
										<ImageButton
											Padding="0"
											Aspect="Fill"
											CornerRadius="18"
											HeightRequest="150"
											Source="{Binding URL}"
											WidthRequest="220" />

										<Label
											Grid.Row="0"
											FontFamily="{StaticResource SansProRegularFontFamily}"
											FontSize="20"
											HorizontalTextAlignment="Center"
											LineBreakMode="TailTruncation"
											MaxLines="1"
											Text="{Binding Name}"
											TextColor="#FE2042"
											VerticalTextAlignment="Center" />
									</Grid>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>
					</ScrollView>
				</Grid>
			</ScrollView>
		</Grid>
	</ContentPage.Content>
</ContentPage>
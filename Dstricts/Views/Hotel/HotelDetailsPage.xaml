								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Bed}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="2"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Bed"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Button
								Grid.Row="0"
								Grid.Column="3"
								Padding="0"
								BackgroundColor="#1A1C2A"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="30"
								HeightRequest="60"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.ScaleBathroom}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="3"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Bathroom"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Button
								Grid.Row="0"
								Grid.Column="4"
								Padding="0"
								BackgroundColor="#1A1C2A"
								CornerRadius="25"
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="30"
								HeightRequest="60"
								HorizontalOptions="CenterAndExpand"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.ElectronFramework}"
								TextColor="White"
								VerticalOptions="CenterAndExpand"
								WidthRequest="60" />

							<Label
								Grid.Row="1"
								Grid.Column="4"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="10"
								HorizontalTextAlignment="Center"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Electronics"
								TextColor="White"
								VerticalTextAlignment="Center" />
						</Grid>

					</ScrollView>

					<Label
						Grid.Row="21"
						Padding="15,0,0,10"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						TextColor="White"
						VerticalTextAlignment="End">
						<Label.FormattedText>
							<FormattedString>
								<Span
									FontFamily="{StaticResource SansProBoldFontFamily}"
									FontSize="25"
									Text="{Binding EatAndDrinkText}" />
								<Span
									FontFamily="{StaticResource SansProRegularFontFamily}"
									FontSize="25"
									Text=" @ Hotel" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Grid
						Grid.Row="22"
						Margin="15,0,15,0"
						IsVisible="{Binding IsInhouseResturantsList, Converter={StaticResource InverseBoolConverter}}">
						<ImageButton
							x:Name="imgRoomService"
							Padding="0"
							Aspect="AspectFill"
							CornerRadius="18"
							HeightRequest="150"
							HorizontalOptions="FillAndExpand" />

						<Frame
							Grid.Row="0"
							Margin="10,0,0,10"
							Padding="5"
							BackgroundColor="#9DA4B3"
							CornerRadius="10"
							HasShadow="False"
							HorizontalOptions="StartAndExpand"
							IsClippedToBounds="True"
							VerticalOptions="EndAndExpand">
							<Label
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="12"
								HorizontalOptions="Start"
								HorizontalTextAlignment="Start"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Room Service"
								TextColor="White"
								VerticalOptions="EndAndExpand"
								VerticalTextAlignment="End" />
						</Frame>
					</Grid>

					<ScrollView
						Grid.Row="22"
						Margin="15,0,15,0"
						HorizontalScrollBarVisibility="Never"
						IsVisible="{Binding IsInhouseResturantsList}"
						Orientation="Horizontal">
						<StackLayout
							x:Name="layoutEatAndDrink"
							BindableLayout.ItemsSource="{Binding HotelDetails.InhouseResturants}"
							Orientation="Horizontal">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Grid Margin="0,0,20,0">
										<ImageButton
											Padding="0"
											Aspect="Fill"
											CornerRadius="18"
											HeightRequest="150"
											Source="{Binding ImageUrl}"
											WidthRequest="220" />

										<Frame
											Grid.Row="0"
											Margin="10,0,0,10"
											Padding="5"
											BackgroundColor="#9DA4B3"
											CornerRadius="10"
											HasShadow="False"
											HorizontalOptions="StartAndExpand"
											IsClippedToBounds="True"
											VerticalOptions="EndAndExpand">
											<Label
												FontFamily="{StaticResource SansProRegularFontFamily}"
												FontSize="12"
												HorizontalOptions="Start"
												HorizontalTextAlignment="Start"
												LineBreakMode="TailTruncation"
												MaxLines="1"
												Text="{Binding ResturantType}"
												TextColor="White"
												VerticalOptions="EndAndExpand"
												VerticalTextAlignment="End" />
										</Frame>
									</Grid>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>
					</ScrollView>

					<Label
						Grid.Row="24"
						Padding="15,0,0,10"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						TextColor="White"
						VerticalTextAlignment="End">
						<Label.FormattedText>
							<FormattedString>
								<Span
									FontFamily="{StaticResource SansProBoldFontFamily}"
									FontSize="25"
									Text="Wellness " />
								<Span
									FontFamily="{StaticResource SansProRegularFontFamily}"
									FontSize="25"
									Text="@ Hotel" />
							</FormattedString>
						</Label.FormattedText>
					</Label>

					<Grid
						Grid.Row="25"
						Margin="15,0,15,0"
						IsVisible="{Binding IsInhouseFittnessList, Converter={StaticResource InverseBoolConverter}}">
						<ImageButton
							x:Name="imgFittness"
							Padding="0"
							Aspect="AspectFill"
							CornerRadius="18"
							HeightRequest="150"
							HorizontalOptions="FillAndExpand" />

						<Frame
							Grid.Row="0"
							Margin="10,0,0,10"
							Padding="5"
							BackgroundColor="#9DA4B3"
							CornerRadius="10"
							HasShadow="False"
							HorizontalOptions="StartAndExpand"
							IsClippedToBounds="True"
							VerticalOptions="EndAndExpand">
							<Label
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="12"
								HorizontalOptions="Start"
								HorizontalTextAlignment="Start"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Fittness"
								TextColor="White"
								VerticalOptions="EndAndExpand"
								VerticalTextAlignment="End" />
						</Frame>
					</Grid>

					<ScrollView
						Grid.Row="25"
						Margin="15,0,15,0"
						HorizontalScrollBarVisibility="Never"
						IsVisible="{Binding IsInhouseFittnessList}"
						Orientation="Horizontal">
						<StackLayout
							x:Name="layoutWellness"
							BindableLayout.ItemsSource="{Binding HotelDetails.InhouseFittness}"
							Orientation="Horizontal">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Grid Margin="0,0,20,0">
										<ImageButton
											Padding="0"
											Aspect="Fill"
											CornerRadius="18"
											HeightRequest="150"
											Source="{Binding ImageUrl}"
											WidthRequest="220" />

										<Frame
											Grid.Row="0"
											Margin="10,0,0,10"
											Padding="5"
											BackgroundColor="#9DA4B3"
											CornerRadius="10"
											HasShadow="False"
											HorizontalOptions="StartAndExpand"
											IsClippedToBounds="True"
											VerticalOptions="EndAndExpand">
											<Label
												FontFamily="{StaticResource SansProRegularFontFamily}"
												FontSize="12"
												HorizontalOptions="Start"
												HorizontalTextAlignment="Start"
												LineBreakMode="TailTruncation"
												MaxLines="1"
												Text="{Binding CenterType}"
												TextColor="White"
												VerticalOptions="EndAndExpand"
												VerticalTextAlignment="End" />
										</Frame>
									</Grid>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>
					</ScrollView>
				</Grid>
			</ScrollView>
		</Grid>
	</ContentPage.Content>
</ContentPage>
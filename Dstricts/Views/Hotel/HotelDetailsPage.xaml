<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.Hotel.HotelDetailsPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Dstricts.Controls"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid
			Margin="0,14,0,0"
			ColumnSpacing="0"
			RowSpacing="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="28" />
				<ColumnDefinition Width="70" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="70" />
				<ColumnDefinition Width="28" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="24" />
				<RowDefinition Height="*" />
				<RowDefinition Height="50" />
			</Grid.RowDefinitions>

			<Label
				Grid.Row="0"
				Grid.Column="1"
				Margin="-10,0,0,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Start"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<Label
				Grid.Row="0"
				Grid.Column="2"
				FontFamily="PoppinsRegularFontFamily"
				FontSize="14"
				HorizontalTextAlignment="Center"
				Text="{Binding HotelDetails.HotelName}"
				TextColor="White"
				VerticalTextAlignment="Center" />


			<Label
				Grid.Row="0"
				Grid.Column="3"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="End"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.CartOutline}"
				TextColor="White"
				VerticalTextAlignment="Center" />


			<ScrollView
				Grid.Row="1"
				Grid.Column="1"
				Grid.ColumnSpan="4"
				Margin="0,26,0,0"
				VerticalScrollBarVisibility="Never">
				<StackLayout Spacing="0" VerticalOptions="StartAndExpand">
					<Label
						FontFamily="PoppinsSemiBoldFontFamily"
						FontSize="18"
						LineHeight="1.845"
						Opacity="0.4"
						Text="Welcome"
						TextColor="White" />

					<Label
						Margin="0,4,0,28"
						FontAttributes="Bold"
						FontFamily="PoppinsBoldFontFamily"
						FontSize="32"
						LineBreakMode="TailTruncation"
						LineHeight="2.6"
						Text="{Binding HotelDetails.FirstName}"
						TextColor="White" />

					<ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
						<StackLayout Orientation="Horizontal" Spacing="20">
							<Frame
								x:Name="frameYourDetails"
								Padding="24,40,25,33"
								BackgroundColor="#282732"
								CornerRadius="20"
								HasShadow="False"
								HorizontalOptions="StartAndExpand"
								IsClippedToBounds="True">
								<StackLayout>
									<Label
										FontAttributes="Bold"
										FontFamily="PoppinsBoldFontFamily"
										FontSize="24"
										LineBreakMode="TailTruncation"
										LineHeight="2.25"
										Text="Your details"
										TextColor="White" />

									<Label
										FontFamily="PoppinsRegularFontFamily"
										FontSize="16"
										LineBreakMode="TailTruncation"
										LineHeight="1.5"
										MaxLines="3"
										Opacity="0.7"
										Text="This part is about your details. Click on read more button to  find out more."
										TextColor="White" />

									<Label
										Margin="0,10,0,13"
										FontFamily="PoppinsRegularFontFamily"
										FontSize="14"
										LineBreakMode="TailTruncation"
										LineHeight="1.4875"
										TextColor="White">
										<Label.FormattedText>
											<FormattedString>
												<Span Text="{Binding HotelDetails.CheckinDate}" />
												<Span Text=" - " />
												<Span Text="{Binding HotelDetails.CheckoutDate}" />
											</FormattedString>
										</Label.FormattedText>
									</Label>

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										HorizontalOptions="StartAndExpand"
										Opacity="0.2"
										VerticalOptions="StartAndExpand"
										WidthRequest="197" />

									<Label
										Margin="0,10,0,10"
										FontFamily="PoppinsRegularFontFamily"
										FontSize="14"
										LineBreakMode="TailTruncation"
										LineHeight="1.4875"
										TextColor="White">
										<Label.FormattedText>
											<FormattedString>
												<Span Text="{Binding HotelDetails.GuestAdult}" />
												<Span Text=" adults &amp; " />
												<Span Text="{Binding HotelDetails.GuestChildren}" />
												<Span Text=" child " />
											</FormattedString>
										</Label.FormattedText>
									</Label>

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										HorizontalOptions="StartAndExpand"
										Opacity="0.2"
										VerticalOptions="StartAndExpand"
										WidthRequest="197" />

									<Label
										Margin="0,10,0,10"
										FontFamily="PoppinsRegularFontFamily"
										FontSize="14"
										LineBreakMode="TailTruncation"
										LineHeight="1.4875"
										Text="{Binding HotelDetails.RoomType}"
										TextColor="White" />

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										HorizontalOptions="StartAndExpand"
										Opacity="0.2"
										VerticalOptions="StartAndExpand"
										WidthRequest="197" />

									<Button
										Margin="0,38,0,0"
										Padding="0"
										BackgroundColor="#3EC4D5"
										CornerRadius="8"
										FontFamily="PoppinsSemiBoldFontFamily"
										FontSize="14"
										HorizontalOptions="StartAndExpand"
										Text="Read more"
										TextColor="#181A1F"
										WidthRequest="128" />
								</StackLayout>
							</Frame>

							<Frame
								x:Name="frameGetWiFi"
								Padding="24,40,25,33"
								BackgroundColor="#242A37"
								CornerRadius="20"
								HasShadow="False"
								HorizontalOptions="StartAndExpand"
								IsClippedToBounds="True"
								IsVisible="{Binding HotelDetails.WifiAvailable}">
								<StackLayout>
									<Label
										FontAttributes="Bold"
										FontFamily="PoppinsBoldFontFamily"
										FontSize="24"
										LineBreakMode="TailTruncation"
										LineHeight="2.25"
										Text="Get Wi-Fi"
										TextColor="#4C7CE5" />

									<Label
										FontFamily="PoppinsRegularFontFamily"
										FontSize="16"
										LineBreakMode="TailTruncation"
										LineHeight="1.5"
										MaxLines="3"
										Opacity="0.7"
										Text="Here are the credentials for accessing Wi-Fi."
										TextColor="White" />

									<StackLayout
										Margin="0,49,0,9"
										Orientation="Horizontal"
										Spacing="20"
										VerticalOptions="CenterAndExpand">
										<Label
											FontFamily="PoppinsSemiBoldFontFamily"
											FontSize="14"
											HorizontalOptions="StartAndExpand"
											LineHeight="1.4875"
											Text="User"
											TextColor="#4C7CE5" />

										<Label
											FontFamily="PoppinsSemiBoldFontFamily"
											FontSize="14"
											HorizontalOptions="EndAndExpand"
											LineHeight="1.4875"
											Text="{Binding HotelDetails.WifiUsername}"
											TextColor="White" />
									</StackLayout>

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										Opacity="0.2"
										VerticalOptions="StartAndExpand" />

									<StackLayout
										Margin="0,11,0,10"
										Orientation="Horizontal"
										Spacing="20"
										VerticalOptions="EndAndExpand">
										<Label
											FontFamily="PoppinsSemiBoldFontFamily"
											FontSize="14"
											HorizontalOptions="StartAndExpand"
											LineHeight="1.4875"
											Text="Pass:"
											TextColor="#4C7CE5"
											VerticalOptions="EndAndExpand" />

										<Label
											FontFamily="PoppinsRegularFontFamily"
											FontSize="14"
											HorizontalOptions="EndAndExpand"
											LineHeight="1.4875"
											Text="{Binding HotelDetails.WifiPassword}"
											TextColor="White"
											VerticalOptions="EndAndExpand" />
									</StackLayout>

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										Opacity="0.2"
										VerticalOptions="StartAndExpand" />

									<Button
										Margin="0,84,0,0"
										Padding="0"
										BackgroundColor="#4C7CE5"
										CornerRadius="8"
										FontFamily="PoppinsSemiBoldFontFamily"
										FontSize="14"
										HorizontalOptions="StartAndExpand"
										Text="Click, if connected"
										TextColor="White"
										WidthRequest="175" />
								</StackLayout>
							</Frame>

							<Frame
								x:Name="frameCompleteCheckIns"
								Padding="24,40,25,33"
								BackgroundColor="#342334"
								CornerRadius="20"
								HasShadow="False"
								HorizontalOptions="StartAndExpand"
								IsClippedToBounds="True"
								IsVisible="{Binding HotelDetails.GuestCheckinLeft}">
								<StackLayout>
									<Label
										FontAttributes="Bold"
										FontFamily="PoppinsBoldFontFamily"
										FontSize="24"
										LineBreakMode="TailTruncation"
										LineHeight="2.25"
										Text="Complete check-ins"
										TextColor="White" />

									<Label
										FontFamily="PoppinsRegularFontFamily"
										FontSize="16"
										LineBreakMode="TailTruncation"
										LineHeight="1.5"
										MaxLines="3"
										Opacity="0.7"
										Text="All your guests has not checked-in yet. Please complete check-in flow for all of them"
										TextColor="White" />

									<StackLayout
										Margin="0,14,0,9"
										Orientation="Horizontal"
										Spacing="20"
										VerticalOptions="CenterAndExpand">
										<Label
											FontFamily="PoppinsSemiBoldFontFamily"
											FontSize="14"
											HorizontalOptions="StartAndExpand"
											LineHeight="1.4875"
											Text="Checked in"
											TextColor="#995A9C" />

										<Label
											FontFamily="PoppinsSemiBoldFontFamily"
											FontSize="14"
											HorizontalOptions="EndAndExpand"
											LineBreakMode="TailTruncation"
											LineHeight="1.4875"
											MaxLines="1"
											TextColor="White">
											<Label.FormattedText>
												<FormattedString>
													<Span Text="{Binding HotelDetails.GuestAdultCheckedIn}" />
													<Span Text=" adult &amp; " />
													<Span Text="{Binding HotelDetails.GuestChildrenCheckedIn}" />
													<Span Text=" children" />
												</FormattedString>
											</Label.FormattedText>
										</Label>
									</StackLayout>

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										Opacity="0.2"
										VerticalOptions="StartAndExpand" />

									<StackLayout
										Margin="0,11,0,10"
										Orientation="Horizontal"
										Spacing="20"
										VerticalOptions="EndAndExpand">
										<Label
											FontFamily="PoppinsSemiBoldFontFamily"
											FontSize="14"
											HorizontalOptions="StartAndExpand"
											LineHeight="1.4875"
											Text="Left"
											TextColor="#995A9C"
											VerticalOptions="EndAndExpand" />

										<Label
											FontFamily="PoppinsRegularFontFamily"
											FontSize="14"
											HorizontalOptions="EndAndExpand"
											LineHeight="1.4875"
											TextColor="White"
											VerticalOptions="EndAndExpand">
											<Label.FormattedText>
												<FormattedString>
													<Span Text="{Binding HotelDetails.GuestAdultLeft}" />
													<Span Text=" adult &amp; " />
													<Span Text="{Binding HotelDetails.GuestChildrenLeft}" />
													<Span Text=" children" />
												</FormattedString>
											</Label.FormattedText>
										</Label>
									</StackLayout>

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										Opacity="0.2"
										VerticalOptions="StartAndExpand" />

									<Button
										Margin="0,84,0,0"
										Padding="0"
										BackgroundColor="#D23CE6"
										Command="{Binding GoToAdultsAndChildrenPageCommand}"
										CornerRadius="8"
										FontFamily="PoppinsSemiBoldFontFamily"
										FontSize="14"
										HorizontalOptions="StartAndExpand"
										Text="Complete remaining"
										TextColor="White"
										WidthRequest="203" />
								</StackLayout>
							</Frame>

							<Frame
								x:Name="frameRules"
								Margin="0,0,28,0"
								Padding="24,40,25,33"
								BackgroundColor="#342B20"
								CornerRadius="20"
								HasShadow="False"
								HorizontalOptions="StartAndExpand"
								IsClippedToBounds="True">
								<StackLayout>
									<Label
										FontAttributes="Bold"
										FontFamily="PoppinsBoldFontFamily"
										FontSize="24"
										LineHeight="2.25"
										Text="Rules"
										TextColor="White" />

									<Label
										FontFamily="PoppinsRegularFontFamily"
										FontSize="16"
										LineBreakMode="TailTruncation"
										LineHeight="1.5"
										MaxLines="3"
										Opacity="0.7"
										Text="Here are rules we expect our guest to follow to make sure everybody has a pleasant stay"
										TextColor="White" />

									<Label
										Margin="0,10,0,13"
										FontFamily="PoppinsRegularFontFamily"
										FontSize="14"
										LineHeight="1.4875"
										Text="No smoking"
										TextColor="White" />

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										HorizontalOptions="StartAndExpand"
										Opacity="0.2"
										VerticalOptions="StartAndExpand"
										WidthRequest="197" />

									<Label
										Margin="0,10,0,10"
										FontFamily="PoppinsRegularFontFamily"
										FontSize="14"
										LineBreakMode="TailTruncation"
										LineHeight="1.4875"
										Text="Check-in at 3pm"
										TextColor="White" />

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										HorizontalOptions="StartAndExpand"
										Opacity="0.2"
										VerticalOptions="StartAndExpand"
										WidthRequest="197" />

									<Label
										Margin="0,10,0,10"
										FontFamily="PoppinsRegularFontFamily"
										FontSize="14"
										LineBreakMode="TailTruncation"
										LineHeight="1.4875"
										Text="Check out at 11am"
										TextColor="White" />

									<BoxView
										BackgroundColor="White"
										HeightRequest="1"
										HorizontalOptions="StartAndExpand"
										Opacity="0.2"
										VerticalOptions="StartAndExpand"
										WidthRequest="197" />

									<Button
										Margin="0,38,0,0"
										Padding="0"
										BackgroundColor="#FF9129"
										CornerRadius="8"
										FontFamily="PoppinsSemiBoldFontFamily"
										FontSize="14"
										HorizontalOptions="StartAndExpand"
										Text="Late check out?"
										TextColor="#181A1F"
										WidthRequest="158" />
								</StackLayout>
							</Frame>
						</StackLayout>
					</ScrollView>

					<Label
						Margin="0,57,0,16"
						FontFamily="PoppinsBoldFontFamily"
						FontSize="20"
						LineBreakMode="TailTruncation"
						LineHeight="1.875"
						Text="Find us"
						TextColor="White" />

					<Frame
						Margin="0,0,28,0"
						Padding="17,28,20,31"
						BackgroundColor="#F4B400"
						CornerRadius="10"
						HasShadow="False"
						IsClippedToBounds="True">
						<Grid ColumnSpacing="33" RowSpacing="0">
							<Grid.RowDefinitions>
								<RowDefinition Height="auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="75" />
							</Grid.ColumnDefinitions>

							<StackLayout
								Grid.Row="0"
								Grid.Column="0"
								Spacing="4">
								<Label
									FontFamily="PoppinsBoldFontFamily"
									FontSize="24"
									LineBreakMode="TailTruncation"
									LineHeight="2.25"
									Text="Address"
									TextColor="#181A1F" />

								<Label
									FontFamily="PoppinsRegularFontFamily"
									FontSize="13"
									LineBreakMode="TailTruncation"
									LineHeight="1.21875"
									MaxLines="2"
									Text="{Binding HotelDetails.VisitingAddress}"
									TextColor="#181A1F" />
							</StackLayout>

							<Frame
								Grid.Row="0"
								Grid.Column="1"
								Padding="0"
								BackgroundColor="#4E8AF4"
								CornerRadius="8"
								HasShadow="False"
								HeightRequest="75"
								IsClippedToBounds="True"
								VerticalOptions="CenterAndExpand">
								<StackLayout
									HorizontalOptions="CenterAndExpand"
									Spacing="0"
									VerticalOptions="CenterAndExpand">
									<Label
										FontFamily="PoppinsSemiBoldFontFamily"
										FontSize="14"
										MaxLines="1"
										Text="Go to"
										TextColor="White" />

									<Label
										FontFamily="PoppinsSemiBoldFontFamily"
										FontSize="14"
										MaxLines="1"
										Text="map"
										TextColor="White" />
								</StackLayout>
							</Frame>
						</Grid>
					</Frame>

					<Label
						Margin="0,57,0,16"
						FontFamily="PoppinsBoldFontFamily"
						FontSize="20"
						LineBreakMode="TailTruncation"
						LineHeight="1.875"
						Text="Order"
						TextColor="White" />

					<Grid Margin="0,0,18,0" ColumnSpacing="19">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Frame
							Grid.Column="0"
							Padding="17,25,17,21"
							BackgroundColor="#282732"
							BorderColor="#45C366"
							CornerRadius="10"
							HasShadow="False"
							IsClippedToBounds="True">
							<StackLayout>
								<Label
									FontFamily="PoppinsSemiBoldFontFamily"
									FontSize="18"
									LineHeight="1.845"
									Text="Clean Room"
									TextColor="White" />

								<Label
									Margin="0,7,0,16"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="13"
									LineBreakMode="TailTruncation"
									LineHeight="1.21875"
									MaxLines="2"
									Opacity="0.7"
									Text="Your room is up for cleaning."
									TextColor="White" />

								<Button
									Padding="0"
									BackgroundColor="#E53614"
									CornerRadius="8"
									FontFamily="PoppinsSemiBoldFontFamily"
									FontSize="12"
									HeightRequest="36"
									HorizontalOptions="StartAndExpand"
									Text="Regret"
									TextColor="White"
									WidthRequest="77" />
							</StackLayout>
						</Frame>

						<Frame
							Grid.Column="1"
							Padding="17,25,17,21"
							BackgroundColor="#282732"
							CornerRadius="10"
							HasShadow="False"
							IsClippedToBounds="True">
							<StackLayout>
								<Label
									FontFamily="PoppinsSemiBoldFontFamily"
									FontSize="18"
									LineBreakMode="TailTruncation"
									LineHeight="1.6875"
									MaxLines="1"
									Text="Don't Disturb"
									TextColor="White" />

								<Label
									Margin="0,7,0,16"
									FontFamily="PoppinsRegularFontFamily"
									FontSize="13"
									LineBreakMode="TailTruncation"
									LineHeight="1.21875"
									MaxLines="2"
									Opacity="0.7"
									Text="Click to activate this request"
									TextColor="White" />

								<Button
									Padding="0"
									BackgroundColor="#406B4B"
									CornerRadius="8"
									FontFamily="PoppinsSemiBoldFontFamily"
									FontSize="12"
									HeightRequest="36"
									HorizontalOptions="StartAndExpand"
									Text="Activate it"
									TextColor="White"
									WidthRequest="86" />
							</StackLayout>
						</Frame>
					</Grid>

					<Frame
						Margin="0,22,28,0"
						Padding="17,28,20,31"
						BackgroundColor="#A97282"
						CornerRadius="10"
						HasShadow="False"
						IsClippedToBounds="True">
						<Grid ColumnSpacing="33" RowSpacing="0">
							<Grid.RowDefinitions>
								<RowDefinition Height="auto" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="75" />
							</Grid.ColumnDefinitions>

							<StackLayout
								Grid.Row="0"
								Grid.Column="0"
								Spacing="4">
								<Label
									FontFamily="PoppinsBoldFontFamily"
									FontSize="24"
									LineHeight="2.25"
									Text="Problems"
									TextColor="White" />

								<Label
									FontFamily="PoppinsRegularFontFamily"
									FontSize="13"
									LineBreakMode="TailTruncation"
									LineHeight="1.21875"
									MaxLines="2"
									Opacity="0.7"
									Text="If you have a problem. Create a ticket for help!"
									TextColor="White" />
							</StackLayout>

							<Frame
								Grid.Row="0"
								Grid.Column="1"
								Padding="0"
								BackgroundColor="#E94975"
								CornerRadius="8"
								HasShadow="False"
								HeightRequest="75"
								IsClippedToBounds="True"
								VerticalOptions="CenterAndExpand">
								<Label
									FontFamily="PoppinsSemiBoldFontFamily"
									FontSize="14"
									HorizontalOptions="CenterAndExpand"
									LineHeight="1.4875"
									MaxLines="1"
									Text="Create"
									TextColor="White"
									VerticalOptions="CenterAndExpand" />
							</Frame>
						</Grid>
					</Frame>

					<Label
						Margin="0,71,0,16"
						FontFamily="PoppinsBoldFontFamily"
						FontSize="20"
						LineBreakMode="TailTruncation"
						LineHeight="1.875"
						Text="Room services"
						TextColor="White" />

					<ScrollView
						HeightRequest="204"
						HorizontalScrollBarVisibility="Never"
						Orientation="Horizontal">
						<StackLayout Orientation="Horizontal" Spacing="20">
							<controls:CustomFrame
								x:Name="frameAmenities"
								Padding="10,0,10,0"
								BackgroundColor="#342B20"
								CornerRadius="12,12,0,0"
								HorizontalOptions="StartAndExpand">

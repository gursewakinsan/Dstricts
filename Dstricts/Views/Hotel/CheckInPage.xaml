										LineBreakMode="TailTruncation"
										MaxLines="1"
										Text="{Binding PropertyNickName}"
										TextColor="White"
										VerticalTextAlignment="Center" />

									<Label
										Grid.Row="0"
										Grid.Column="2"
										FontFamily="{StaticResource MaterialFontFamily}"
										FontSize="20"
										HorizontalTextAlignment="End"

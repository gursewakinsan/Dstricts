                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                    </ScrollView>

                    <controls:CustomButton
						Padding="0"
						Grid.Row="9"
						CornerRadius="30"
						FontSize="14"
						BackgroundColor="White"
						FontFamily="PoppinsSemiBoldFontFamily"

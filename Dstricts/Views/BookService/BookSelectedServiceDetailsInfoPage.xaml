<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.BookService.BookSelectedServiceDetailsInfoPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Dstricts.Controls"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="32" />
				<RowDefinition />
				<RowDefinition Height="50" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="117" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="117" />
			</Grid.ColumnDefinitions>

			<Label
				Grid.Row="0"
				Grid.Column="0"
				Margin="15,0,0,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Start"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.ArrowLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<Button
				Grid.Row="0"
				Grid.Column="2"
				Margin="0,0,15,0"
				Padding="0"
				BackgroundColor="#342B20"
				CornerRadius="8"
				FontAttributes="Bold"
				FontFamily="PoppinsSemiBoldFontFamily"
				FontSize="12"
				HeightRequest="32"
				HorizontalOptions="EndAndExpand"
				Text="Get Wifi"
				TextColor="#5DA1A6"
				WidthRequest="102" />

			<ScrollView
				Grid.Row="1"
				Grid.ColumnSpan="3"
				VerticalScrollBarVisibility="Never">
				<StackLayout
					Padding="28,20,28,0"
					Spacing="0"
					VerticalOptions="StartAndExpand">

					<Label
						FontFamily="PoppinsRegularFontFamily"
						FontSize="16"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Opacity="0.5"
						Text="{Binding WellnessName}"
						TextColor="White"
						VerticalTextAlignment="Center" />


					<Label
						Margin="0,4,0,0"
						FontAttributes="Bold"
						FontFamily="PoppinsBoldFontFamily"
						FontSize="32"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="{Binding WellnessSelectedServiceInfo.DishName}"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Margin="0,28,0,28"
						BackgroundColor="White"
						HeightRequest="1"
						Opacity="0.2" />

					<Grid ColumnSpacing="12" RowSpacing="12">
						<Grid.RowDefinitions>
							<RowDefinition Height="244" />
							<RowDefinition Height="24" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="24" />
						</Grid.ColumnDefinitions>

						<Frame
							Grid.Row="0"
							Grid.ColumnSpan="2"
							Padding="0"
							BackgroundColor="Transparent"
							BorderColor="Transparent"
							CornerRadius="16"
							HasShadow="False"
							IsClippedToBounds="True"
							VerticalOptions="StartAndExpand">
							<Image
								Aspect="AspectFill"
								BackgroundColor="Black"
								HeightRequest="244"
								Source="{Binding WellnessSelectedServiceInfo.DishImage}" />
						</Frame>

						<StackLayout
							Grid.Row="1"
							Grid.Column="0"
							Orientation="Horizontal"
							Spacing="0">
							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="24"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Heart}"
								TextColor="#EF3B17"
								VerticalTextAlignment="Center" />

							<Label
								Margin="8,0,24,0"
								FontFamily="PoppinsRegularFontFamily"
								FontSize="14"
								Opacity="0.7"
								Text="435 Kalorier"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="24"
								Opacity="0.7"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Chat}"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								Margin="11,0,0,0"
								FontFamily="PoppinsRegularFontFamily"
								FontSize="14"
								Opacity="0.7"
								Text="295 gram"
								TextColor="White"
								VerticalTextAlignment="Center" />
						</StackLayout>

						<Label
							Grid.Row="1"
							Grid.Column="1"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="24"
							HorizontalTextAlignment="End"
							Opacity="0.7"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.BookmarkPlusOutline}"
							TextColor="White"
							VerticalTextAlignment="Center" />
					</Grid>

					<Label
						Margin="0,28,0,28"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="16"
						HorizontalTextAlignment="Start"
						Opacity="0.5"
						Text="{Binding WellnessSelectedServiceInfo.DishDetail}"
						TextColor="White"
						VerticalOptions="StartAndExpand" />

					<Grid
						Margin="0,0,0,28"
						ColumnSpacing="0"
						IsVisible="{Binding WellnessSelectedServiceInfo.RecurringEvent, Converter={StaticResource InverseBoolConverter}}"
						RowSpacing="0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="1" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="1" />
							<RowDefinition Height="100" />
							<RowDefinition Height="1" />
						</Grid.RowDefinitions>

						<BoxView
							Grid.Row="0"
							Grid.ColumnSpan="3"
							BackgroundColor="#2A2A31" />

						<StackLayout
							Grid.Row="1"
							Grid.Column="0"
							HorizontalOptions="StartAndExpand"
							Spacing="5"
							VerticalOptions="Center">
							<Label
								FontAttributes="Bold"
								FontFamily="{StaticResource PoppinsBoldFontFamily}"
								FontSize="16"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Date"
								TextColor="White" />

							<Label
								FontFamily="{StaticResource PoppinsRegularFontFamily}"
								FontSize="12"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Opacity="0.7"
								Text="{Binding WellnessSelectedServiceInfo.DisplayBookingDate}"
								TextColor="White" />
						</StackLayout>

						<BoxView
							Grid.Row="1"
							Grid.Column="1"
							Margin="0,20,0,20"
							BackgroundColor="#2A2A31" />

						<StackLayout
							Grid.Row="1"
							Grid.Column="2"
							Margin="20,0,0,0"
							HorizontalOptions="StartAndExpand"
							Spacing="5"
							VerticalOptions="Center">
							<Label
								FontAttributes="Bold"
								FontFamily="{StaticResource PoppinsBoldFontFamily}"
								FontSize="16"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Text="Time"
								TextColor="White" />

							<Label
								FontFamily="{StaticResource PoppinsRegularFontFamily}"
								FontSize="12"
								LineBreakMode="TailTruncation"
								MaxLines="1"
								Opacity="0.7"
								Text="{Binding WellnessSelectedServiceInfo.WorkTime}"
								TextColor="White" />
						</StackLayout>

						<BoxView
							Grid.Row="2"
							Grid.ColumnSpan="3"
							BackgroundColor="#2A2A31" />
					</Grid>

					<Label
						FontAttributes="Bold"
						FontFamily="{StaticResource PoppinsBoldFontFamily}"
						FontSize="16"
						LineBreakMode="TailTruncation"
						MaxLines="1"
						Text="Company size"
						TextColor="White" />

					<Grid Margin="0,20,0,20" ColumnSpacing="30">
						<Grid.RowDefinitions>
							<RowDefinition Height="50" />
						</Grid.RowDefinitions>

						<Button
							Grid.Row="0"
							Grid.Column="0"
							Padding="0"
							BackgroundColor="Transparent"
							BorderColor="#2A2A31"
							BorderWidth="1"
							Command="{Binding ReduceCompanySizeCommand}"
							CornerRadius="12"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.Minus}"
							TextColor="White" />

						<Button
							Grid.Row="0"
							Grid.Column="1"
							Padding="0"
							BackgroundColor="Transparent"
							BorderColor="#6263ED"
							BorderWidth="1"
							CornerRadius="12"
							FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
							FontSize="20"
							Text="{Binding CompanySize}"
							TextColor="White" />

						<Button
							Grid.Row="0"
							Grid.Column="2"
							Padding="0"
							BackgroundColor="Transparent"
							BorderColor="#2A2A31"
							BorderWidth="1"
							Command="{Binding IncreaseCompanySizeCommand}"
							CornerRadius="12"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.Plus}"
							TextColor="White" />
					</Grid>

				</StackLayout>
			</ScrollView>

			<controls:CustomButton
				Grid.Row="2"
				Grid.ColumnSpan="3"
				Margin="28,0,28,0"
				BackgroundColor="#6263ED"
				Command="{Binding AddPublicServiceToCartAppCommand}"
				CornerRadius="10"
				FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
				FontSize="16"
				HeightRequest="48"
				Text="Book"
				TextColor="White" />
		</Grid>
	</ContentPage.Content>
</ContentPage>
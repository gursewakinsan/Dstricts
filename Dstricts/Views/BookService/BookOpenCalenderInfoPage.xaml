<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.BookService.BookOpenCalenderInfoPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Dstricts.Controls"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<Grid
		Margin="0,14,0,0"
		ColumnSpacing="0"
		RowSpacing="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="24" />
			<RowDefinition Height="34" />
			<RowDefinition Height="70" />
			<RowDefinition Height="21" />
			<RowDefinition Height="1" />
			<RowDefinition Height="54" />
			<RowDefinition Height="20" />
			<RowDefinition Height="22" />
			<RowDefinition Height="86" />
			<RowDefinition Height="34" />
			<RowDefinition Height="1" />
			<RowDefinition Height="34" />
			<RowDefinition Height="20" />
			<RowDefinition Height="32" />
			<RowDefinition Height="80" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="28" />
			<ColumnDefinition Width="70" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="70" />
			<ColumnDefinition Width="28" />
		</Grid.ColumnDefinitions>
		<Label
			Grid.Row="0"
			Grid.Column="1"
			FontFamily="{StaticResource MaterialFontFamily}"
			FontSize="25"
			HorizontalTextAlignment="Start"
			Text="{x:Static fontawesome:DstrictsAppFlatIcons.ChevronLeft}"
			TextColor="White"
			VerticalTextAlignment="Center" />

		<Label
			Grid.Row="0"
			Grid.Column="2"
			FontFamily="{StaticResource PoppinsRegularFontFamily}"
			FontSize="14"
			HorizontalTextAlignment="Center"
			Text="{Binding WellnessName}"
			TextColor="White"
			VerticalTextAlignment="Center" />

		<StackLayout
			Grid.Row="2"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			Spacing="0">
			<Label
				FontFamily="{StaticResource PoppinsRegularFontFamily}"
				FontSize="18"
				Opacity="0.4"
				Text="Pick"
				TextColor="White"
				VerticalTextAlignment="Start" />

			<Label
				x:Name="lblName"
				FontAttributes="Bold"
				FontFamily="{StaticResource PoppinsBoldFontFamily}"
				FontSize="32"
				TextColor="White"
				VerticalTextAlignment="End" />
		</StackLayout>

		<BoxView
			Grid.Row="4"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			BackgroundColor="#2A2A31" />

		<Label
			Grid.Row="6"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			FontAttributes="Bold"
			FontFamily="{StaticResource PoppinsBoldFontFamily}"
			FontSize="16"
			HorizontalTextAlignment="Start"
			Text="Date"
			TextColor="White" />

		<ScrollView
			Grid.Row="8"
			Grid.Column="1"
			Grid.ColumnSpan="4"
			HorizontalScrollBarVisibility="Never"
			Orientation="Horizontal">
			<StackLayout BindableLayout.ItemsSource="{Binding AvailableDatesForbookingList}" Orientation="Horizontal">
				<BindableLayout.ItemTemplate>
					<DataTemplate>
						<Frame
							Margin="0,0,16,0"
							Padding="0"
							BackgroundColor="Transparent"
							BorderColor="{Binding PickDateBorderColor}"
							CornerRadius="16"
							HasShadow="False"
							HeightRequest="86"
							HorizontalOptions="Start"
							IsClippedToBounds="True"
							VerticalOptions="Center"
							WidthRequest="80">
							<Frame.GestureRecognizers>
								<TapGestureRecognizer Tapped="PickDateFrameTapped" />
							</Frame.GestureRecognizers>
							<StackLayout
								HorizontalOptions="CenterAndExpand"
								Spacing="0"
								VerticalOptions="CenterAndExpand">
								<StackLayout.GestureRecognizers>
									<TapGestureRecognizer Tapped="PickDateStackLayoutTapped" />
								</StackLayout.GestureRecognizers>
								<Label
									FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
									FontSize="16"
									HorizontalOptions="CenterAndExpand"
									HorizontalTextAlignment="Center"
									Text="{Binding DisplayDate}"
									TextColor="{Binding DisplayDateColor}">
									<Label.GestureRecognizers>
										<TapGestureRecognizer Tapped="PickDateLabelTapped" />
									</Label.GestureRecognizers>
								</Label>

								<Label
									FontFamily="{StaticResource PoppinsRegularFontFamily}"
									FontSize="12"
									HorizontalOptions="CenterAndExpand"
									HorizontalTextAlignment="Center"
									Text="{Binding DisplayMonth}"
									TextColor="{Binding DisplayMonthColor}">
									<Label.GestureRecognizers>
										<TapGestureRecognizer Tapped="PickDateLabelTapped" />
									</Label.GestureRecognizers>
								</Label>
							</StackLayout>
						</Frame>
					</DataTemplate>
				</BindableLayout.ItemTemplate>
			</StackLayout>
		</ScrollView>

		<BoxView
			Grid.Row="10"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			BackgroundColor="#2A2A31" />

		<Label
			Grid.Row="12"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			FontAttributes="Bold"
			FontFamily="{StaticResource PoppinsBoldFontFamily}"
			FontSize="16"
			HorizontalTextAlignment="Start"
			Text="Time"
			TextColor="White" />

		<Frame
			Grid.Row="14"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			Padding="20,0,20,0"
			BackgroundColor="Transparent"
			BorderColor="{Binding WorkTimeFrameBorderColor}"
			CornerRadius="16"
			HasShadow="False"
			IsClippedToBounds="True">
			<Frame.GestureRecognizers>
				<TapGestureRecognizer Command="{Binding WorkTimeSelectedCommand}" />
			</Frame.GestureRecognizers>
			<Grid ColumnSpacing="0" VerticalOptions="CenterAndExpand">
				<Grid.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding WorkTimeSelectedCommand}" />
				</Grid.GestureRecognizers>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="40" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="auto" />
				</Grid.ColumnDefinitions>
				<Button
					Grid.Column="0"
					Padding="0"
					BackgroundColor="#282732"
					Command="{Binding WorkTimeSelectedCommand}"
					CornerRadius="20"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="25"
					HeightRequest="40"
					HorizontalOptions="CenterAndExpand"
					Text="{x:Static fontawesome:DstrictsAppFlatIcons.AvTimer}"
					TextColor="#6F70FB"
					VerticalOptions="CenterAndExpand"
					WidthRequest="40" />

				<Label
					Grid.Column="1"
					Margin="20,0,0,0"
					FontAttributes="Bold"
					FontFamily="{StaticResource PoppinsBoldFontFamily}"
					FontSize="18"
					HorizontalTextAlignment="Start"
					Text="{Binding WellnessOpenCalenderInfo.WorkTime}"
					TextColor="White"
					VerticalTextAlignment="Center">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding WorkTimeSelectedCommand}" />
					</Label.GestureRecognizers>
				</Label>

				<StackLayout
					Grid.Column="2"
					HorizontalOptions="EndAndExpand"
					Spacing="0"
					VerticalOptions="CenterAndExpand">
					<StackLayout.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding WorkTimeSelectedCommand}" />
					</StackLayout.GestureRecognizers>
					<Label
						FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
						FontSize="18"
						TextColor="White">
						<Label.FormattedText>
							<FormattedString>
								<Span Text="{Binding WellnessOpenCalenderInfo.DisplayDurationMin}" />
								<Span Text=" " />
								<Span Text="min" />
							</FormattedString>
						</Label.FormattedText>
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding WorkTimeSelectedCommand}" />
						</Label.GestureRecognizers>
					</Label>

					<Label
						FontFamily="{StaticResource PoppinsRegularFontFamily}"
						FontSize="14"
						Opacity="0.4"
						Text="Duration"
						TextColor="White">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding WorkTimeSelectedCommand}" />
						</Label.GestureRecognizers>
					</Label>
				</StackLayout>
			</Grid>
		</Frame>

		<controls:CustomButton
			Grid.Row="15"
			Grid.Column="1"
			Grid.ColumnSpan="3"
			BackgroundColor="#6263ED"
			Command="{Binding WellnessCartBookingTimeUpdateCommand}"
			CornerRadius="10"
			FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
			FontSize="16"
			HeightRequest="48"
			Text="Go to payment"
			TextColor="White"
			VerticalOptions="EndAndExpand" />
	</Grid>
</ContentPage>
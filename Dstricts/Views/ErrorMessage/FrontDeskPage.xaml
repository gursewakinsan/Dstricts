<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.ErrorMessage.FrontDeskPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#6163EC"
	NavigationPage.HasNavigationBar="False">
	<Grid>
		<Image Aspect="AspectFill" Source="ErrorMessageBg.png" />

		<Frame
			Margin="8"
			Padding="32,35,32,35"
			BackgroundColor="#181A1F"
			CornerRadius="40"
			HasShadow="False"
			IsClippedToBounds="True"
			VerticalOptions="EndAndExpand">
			<StackLayout Spacing="0">
				<Label
					FontAttributes="Bold"
					FontFamily="{StaticResource PoppinsBoldFontFamily}"
					FontSize="30"
					HorizontalOptions="StartAndExpand"
					Text="Front desk"
					TextColor="White" />

				<Label
					Margin="0,10,0,20"
					FontFamily="{StaticResource PoppinsRegularFontFamily}"
					FontSize="16"
					LineBreakMode="TailTruncation"
					LineHeight="1.2"
					MaxLines="2"
					Opacity="0.7"
					Text="Online check in not allowed. Please proceed to front desk for check in to hotel"
					TextColor="White" />

				<StackLayout
					HorizontalOptions="StartAndExpand"
					Orientation="Horizontal"
					Spacing="6">
					<BoxView
						BackgroundColor="White"
						CornerRadius="3"
						HeightRequest="6"
						Opacity="0.32"
						WidthRequest="6" />

					<BoxView
						BackgroundColor="White"
						CornerRadius="3"
						HeightRequest="6"
						Opacity="0.32"
						WidthRequest="6" />

					<BoxView
						BackgroundColor="#6263ED"
						CornerRadius="3"
						HeightRequest="6"
						WidthRequest="20" />
				</StackLayout>

				<Frame
					Margin="0,30,0,0"
					Padding="0"
					BackgroundColor="#6263ED"
					CornerRadius="12"
					HasShadow="False"
					HeightRequest="56"
					IsClippedToBounds="True">
					<Frame.GestureRecognizers>
						<TapGestureRecognizer Tapped="OnFrontDeskTapped" />
					</Frame.GestureRecognizers>
					<StackLayout
						HorizontalOptions="CenterAndExpand"
						Orientation="Horizontal"
						Spacing="8"
						VerticalOptions="CenterAndExpand">
						<StackLayout.GestureRecognizers>
							<TapGestureRecognizer Tapped="OnFrontDeskTapped" />
						</StackLayout.GestureRecognizers>
						<Label
							FontFamily="{StaticResource PoppinsSemiBoldFontFamily}"
							FontSize="16"
							Text="Submit"
							TextColor="White">
							<Label.GestureRecognizers>
								<TapGestureRecognizer Tapped="OnFrontDeskTapped" />
							</Label.GestureRecognizers>
						</Label>

						<Label
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.ArrowRight}"
							TextColor="White">
							<Label.GestureRecognizers>
								<TapGestureRecognizer Tapped="OnFrontDeskTapped" />
							</Label.GestureRecognizers>
						</Label>
					</StackLayout>
				</Frame>
			</StackLayout>
		</Frame>
	</Grid>
</ContentPage>
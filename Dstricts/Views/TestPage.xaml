<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.TestPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Dstricts.Controls"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	BackgroundColor="Black">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="80" />
			</Grid.ColumnDefinitions>

			<Label
				Grid.Row="0"
				Grid.Column="0"
				Margin="15,0,0,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Start"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.ArrowLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<Label
				Grid.Row="0"
				Grid.Column="2"
				Margin="0,0,10,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="End"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.DotsVertical}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<ScrollView
				Grid.Row="1"
				Grid.ColumnSpan="3"
				VerticalScrollBarVisibility="Never">
				<Grid ColumnSpacing="0" RowSpacing="0">
					<Grid.RowDefinitions>
						<RowDefinition Height="20" />
						<RowDefinition Height="20" />
						<RowDefinition Height="32" />
						<RowDefinition Height="30" />
						<RowDefinition Height="1" />
						<RowDefinition Height="30" />
						<RowDefinition Height="200" />
						<RowDefinition Height="30" />
						<RowDefinition Height="25" />
						<RowDefinition Height="auto" />
						<RowDefinition Height="45" />
						<RowDefinition Height="30" />
						<RowDefinition Height="1" />
						<RowDefinition Height="100" />
						<RowDefinition Height="1" />
						<RowDefinition Height="100" />
						<RowDefinition Height="25" />
						<RowDefinition Height="1" />
						<RowDefinition Height="50" />
					</Grid.RowDefinitions>

					<StackLayout
						Grid.Row="1"
						Padding="15,0,15,0"
						Orientation="Horizontal"
						Spacing="5">
						<Label
							FontFamily="{StaticResource SansProRegularFontFamily}"
							FontSize="15"
							HorizontalTextAlignment="Start"
							MaxLines="1"
							Text="4.6 Stars"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Label
							Margin="2,0,2,0"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="4"
							HorizontalTextAlignment="End"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.CheckboxBlankCircle}"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Label
							FontFamily="{StaticResource SansProRegularFontFamily}"
							FontSize="15"
							HorizontalTextAlignment="Start"
							MaxLines="1"
							Text="17 Reviews"
							TextColor="White"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<Label
						Grid.Row="2"
						Padding="15,0,0,0"
						FontFamily="{StaticResource SansProBoldFontFamily}"
						FontSize="30"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="The Taj Mahal Palace"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Grid.Row="4"
						Margin="15,0,15,0"
						BackgroundColor="White"
						Opacity="0.5" />

					<Frame
						Grid.Row="6"
						Margin="15,0,15,0"
						Padding="0"
						BackgroundColor="Transparent"
						BorderColor="Transparent"
						CornerRadius="10"
						HasShadow="False"
						HeightRequest="200"
						IsClippedToBounds="True"
						VerticalOptions="StartAndExpand">
						<Grid>
							<CarouselView
								x:Name="cardCarouselView"
								Grid.Row="0"
								BackgroundColor="Transparent"
								HeightRequest="200"
								HorizontalScrollBarVisibility="Never"
								IndicatorView="indicatorView"
								VerticalOptions="CenterAndExpand">
								<CarouselView.ItemTemplate>
									<DataTemplate>
										<Image
											Aspect="AspectFill"
											HeightRequest="200"
											Source="{Binding URL}" />
									</DataTemplate>
								</CarouselView.ItemTemplate>
							</CarouselView>

							<IndicatorView
								x:Name="indicatorView"
								Grid.Row="0"
								Margin="0,0,0,10"
								HorizontalOptions="CenterAndExpand"
								IndicatorColor="#9DA4B3"
								SelectedIndicatorColor="#FE2042"
								VerticalOptions="EndAndExpand" />
						</Grid>
					</Frame>

					<Label
						Grid.Row="8"
						Padding="15,0,0,0"
						FontFamily="{StaticResource SansProBoldFontFamily}"
						FontSize="20"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="About your stay"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="9"
						Padding="15,10,0,15"
						FontFamily="{StaticResource SansProRegularFontFamily}"
						FontSize="16"
						HorizontalTextAlignment="Start"
						MaxLines="2"
						Text="You can access information about the hotel, your stay and payment here"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<controls:CustomButton
						Grid.Row="10"
						Margin="15,0,15,0"
						BackgroundColor="Transparent"
						BorderColor="White"
						BorderWidth="1"
						CornerRadius="10"
						FontFamily="{StaticResource SansProSemiBoldFontFamily}"
						Text="Details" />

					<BoxView
						Grid.Row="12"
						Margin="15,0,15,0"
						BackgroundColor="White"
						Opacity="0.5" />

					<Grid
						Grid.Row="13"
						ColumnSpacing="0"
						RowSpacing="0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition Width="1" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<StackLayout
							Grid.Column="0"
							Spacing="2"
							VerticalOptions="CenterAndExpand">
							<Label
								Margin="15,0,0,0"
								FontFamily="{StaticResource SansProBoldFontFamily}"
								FontSize="18"
								HorizontalTextAlignment="Start"
								MaxLines="1"
								Text="Check in"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								Margin="15,0,0,0"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="16"
								HorizontalTextAlignment="Start"
								MaxLines="1"
								Text="01/02/2021"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								Margin="15,0,0,0"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="16"
								HorizontalTextAlignment="Start"
								MaxLines="1"
								Text="15:00"
								TextColor="White"
								VerticalTextAlignment="Center" />
						</StackLayout>

						<BoxView
							Grid.Column="1"
							Margin="0,20,0,20"
							BackgroundColor="White"
							Opacity="0.5" />

						<StackLayout
							Grid.Column="2"
							Spacing="2"
							VerticalOptions="CenterAndExpand">
							<Label
								Margin="15,0,0,0"
								FontFamily="{StaticResource SansProBoldFontFamily}"
								FontSize="18"
								HorizontalTextAlignment="Start"
								MaxLines="1"
								Text="Check out"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								Margin="15,0,0,0"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="16"
								HorizontalTextAlignment="Start"
								MaxLines="1"
								Text="10/02/2021"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								Margin="15,0,0,0"
								FontFamily="{StaticResource SansProRegularFontFamily}"
								FontSize="16"
								HorizontalTextAlignment="Start"
								MaxLines="1"
								Text="11:00"
								TextColor="White"
								VerticalTextAlignment="Center" />
						</StackLayout>
					</Grid>

					<BoxView
						Grid.Row="14"
						Margin="15,0,15,0"
						BackgroundColor="White"
						Opacity="0.5" />

					<Grid
						Grid.Row="15"
						Margin="15,0,15,0"
						VerticalOptions="EndAndExpand">
						<Grid.RowDefinitions>
							<RowDefinition Height="60" />
							<RowDefinition Height="auto" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="60" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="60" />
						</Grid.ColumnDefinitions>
						<Button
							Grid.Row="0"
							Grid.Column="0"
							Padding="0"
							BackgroundColor="#1A1C2A"
							CornerRadius="25"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="30"
							HeightRequest="60"
							HorizontalOptions="StartAndExpand"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.Directions}"
							TextColor="White"
							VerticalOptions="CenterAndExpand"
							WidthRequest="60" />

						<Label
							Grid.Row="1"
							Grid.Column="0"
							FontFamily="{StaticResource SansProRegularFontFamily}"
							FontSize="10"
							HorizontalTextAlignment="Center"
							LineBreakMode="TailTruncation"
							MaxLines="1"
							Text="Directions"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Button
							Grid.Row="0"
							Grid.Column="1"
							Padding="0"
							BackgroundColor="#1A1C2A"
							CornerRadius="25"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="30"
							HeightRequest="60"
							HorizontalOptions="CenterAndExpand"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.Phone}"
							TextColor="White"
							VerticalOptions="CenterAndExpand"
							WidthRequest="60" />

						<Label
							Grid.Row="1"
							Grid.Column="1"
							FontFamily="{StaticResource SansProRegularFontFamily}"
							FontSize="10"
							HorizontalTextAlignment="Center"
							LineBreakMode="TailTruncation"
							MaxLines="1"
							Text="Call"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Button
							Grid.Row="0"
							Grid.Column="2"
							Padding="0"
							BackgroundColor="#1A1C2A"
							CornerRadius="25"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="30"
							HeightRequest="60"
							HorizontalOptions="EndAndExpand"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.Chat}"
							TextColor="White"
							VerticalOptions="CenterAndExpand"
							WidthRequest="60" />

						<Label
							Grid.Row="1"
							Grid.Column="2"
							FontFamily="{StaticResource SansProRegularFontFamily}"
							FontSize="10"
							HorizontalTextAlignment="Center"
							LineBreakMode="TailTruncation"
							MaxLines="1"
							Text="Message"
							TextColor="White"
							VerticalTextAlignment="Center" />
					</Grid>

					<BoxView
						Grid.Row="17"
						Margin="15,0,15,0"
						BackgroundColor="White"
						Opacity="0.5" />
				</Grid>
			</ScrollView>
		</Grid>
	</ContentPage.Content>
</ContentPage>
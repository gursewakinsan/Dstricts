<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.TestPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#181A1F"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition />
				<RowDefinition Height="10" />
				<RowDefinition Height="44" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="80" />
			</Grid.ColumnDefinitions>

			<Label
				Grid.Row="0"
				Grid.Column="0"
				Margin="15,0,0,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Start"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.ArrowLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<Label
				Grid.Row="0"
				Grid.Column="2"
				Margin="0,0,10,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="End"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.DotsVertical}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<ScrollView
				Grid.Row="1"
				Grid.ColumnSpan="3"
				VerticalScrollBarVisibility="Never">
				<StackLayout
					Padding="28,20,28,0"
					Spacing="0"
					VerticalOptions="StartAndExpand">
					<StackLayout Orientation="Horizontal" Spacing="5">
						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							MaxLines="1"
							Opacity="0.5"
							Text="4.6 Stars"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Label
							Margin="2,0,2,0"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="4"
							HorizontalTextAlignment="End"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.CheckboxBlankCircle}"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Label
							FontFamily="PoppinsRegularFontFamily"
							FontSize="16"
							HorizontalTextAlignment="Start"
							MaxLines="1"
							Opacity="0.5"
							Text="17 Reviews"
							TextColor="White"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<Label
						Margin="0,4,0,0"
						FontAttributes="Bold"
						FontFamily="PoppinsBoldFontFamily"
						FontSize="32"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="Today Activity"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Margin="0,28,0,28"
						BackgroundColor="White"
						HeightRequest="1"
						Opacity="0.2" />

					<Grid ColumnSpacing="12" RowSpacing="12">
						<Grid.RowDefinitions>
							<RowDefinition Height="24" />
							<RowDefinition Height="244" />
							<RowDefinition Height="24" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="24" />
						</Grid.ColumnDefinitions>
						<Label
							Grid.Row="0"
							Grid.Column="0"
							FontFamily="PoppinsSemiBoldFontFamily"
							FontSize="14"
							HorizontalTextAlignment="Start"
							MaxLines="1"
							Text="Recommendation"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Label
							Grid.Row="0"
							Grid.Column="1"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="24"
							HorizontalTextAlignment="End"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.DotsHorizontal}"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Frame
							Grid.Row="1"
							Grid.ColumnSpan="2"
							Padding="0"
							BackgroundColor="Transparent"
							BorderColor="Transparent"
							CornerRadius="16"
							HasShadow="False"
							IsClippedToBounds="True"
							VerticalOptions="StartAndExpand">
							<Image
								x:Name="imgRecommendation"
								Aspect="AspectFill"
								BackgroundColor="Black"
								HeightRequest="244" />
						</Frame>

						<StackLayout
							Grid.Row="2"
							Grid.Column="0"
							Orientation="Horizontal"
							Spacing="0">
							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="24"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Heart}"
								TextColor="#EF3B17"
								VerticalTextAlignment="Center" />

							<Label
								Margin="8,0,24,0"
								FontFamily="PoppinsRegularFontFamily"
								FontSize="14"
								Opacity="0.7"
								Text="4329"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								FontFamily="{StaticResource MaterialFontFamily}"
								FontSize="24"
								Opacity="0.7"
								Text="{x:Static fontawesome:DstrictsAppFlatIcons.Chat}"
								TextColor="White"
								VerticalTextAlignment="Center" />

							<Label
								Margin="11,0,0,0"
								FontFamily="PoppinsRegularFontFamily"
								FontSize="14"
								Opacity="0.7"
								Text="28"
								TextColor="White"
								VerticalTextAlignment="Center" />
						</StackLayout>

						<Label
							Grid.Row="2"
							Grid.Column="1"
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="24"
							HorizontalTextAlignment="End"
							Opacity="0.7"
							Text="{x:Static fontawesome:DstrictsAppFlatIcons.BookmarkPlusOutline}"
							TextColor="White"
							VerticalTextAlignment="Center" />
					</Grid>

					<BoxView
						Margin="0,28,0,28"
						BackgroundColor="White"
						HeightRequest="1"
						Opacity="0.2" />

					<Label
						Margin="0,0,0,18"
						FontAttributes="Bold"
						FontFamily="PoppinsBoldFontFamily"
						FontSize="20"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="Menu"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
						<StackLayout x:Name="layoutMenu" Orientation="Horizontal">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<StackLayout
										Margin="0,0,15,0"
										Spacing="0"
										WidthRequest="{Binding ImgWidth}">
										<ImageButton
											Padding="0"
											Aspect="AspectFill"
											BackgroundColor="Transparent"
											CornerRadius="10"
											HeightRequest="{Binding ImgHeight}"
											HorizontalOptions="Center"
											Source="{Binding ImgUrl}"
											VerticalOptions="Center"
											WidthRequest="{Binding ImgWidth}" />

										<Label
											Margin="0,12,0,4"
											FontAttributes="Bold"
											FontFamily="PoppinsBoldFontFamily"
											FontSize="16"
											HorizontalTextAlignment="Start"
											LineBreakMode="TailTruncation"
											MaxLines="1"
											Text="{Binding Name}"
											TextColor="White"
											VerticalTextAlignment="Start" />

										<Label
											FontFamily="PoppinsRegularFontFamily"
											FontSize="12"
											HorizontalOptions="StartAndExpand"
											HorizontalTextAlignment="Start"
											LineBreakMode="TailTruncation"
											MaxLines="1"
											Opacity="0.7"
											Text="{Binding Detail}"
											TextColor="White"
											VerticalTextAlignment="Start" />
									</StackLayout>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>
					</ScrollView>

					<BoxView
						Margin="0,28,0,28"
						BackgroundColor="White"
						HeightRequest="1"
						Opacity="0.2" />

					<Grid Margin="0,0,0,18" RowSpacing="20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition Width="80" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="34" />
						</Grid.RowDefinitions>
						<Label
							Grid.Row="0"
							Grid.Column="0"
							FontAttributes="Bold"
							FontFamily="PoppinsBoldFontFamily"
							FontSize="20"
							HorizontalTextAlignment="Start"
							MaxLines="1"
							Text="Top dishes"
							TextColor="White"
							VerticalTextAlignment="Center" />

						<Button
							Grid.Row="0"
							Grid.Column="1"
							BackgroundColor="Transparent"
							BorderColor="White"
							BorderWidth="1"
							CornerRadius="8"
							FontFamily="PoppinsRegularFontFamily"
							HeightRequest="34"
							Opacity="0.2"
							VerticalOptions="CenterAndExpand"
							WidthRequest="80" />

						<Label
							Grid.Row="0"
							Grid.Column="1"
							FontFamily="PoppinsRegularFontFamily"
							FontSize="12"
							HorizontalTextAlignment="Center"
							Text="View All"
							TextColor="#E08D70"
							VerticalTextAlignment="Center" />
					</Grid>

					<Grid ColumnSpacing="10" RowSpacing="10">
						<Grid.RowDefinitions>
							<RowDefinition Height="76" />
							<RowDefinition Height="76" />
							<RowDefinition Height="76" />
							<RowDefinition Height="76" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<ImageButton
							x:Name="img0"
							Grid.Row="0"
							Grid.Column="0"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img1"
							Grid.Row="0"
							Grid.Column="1"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img2"
							Grid.Row="0"
							Grid.Column="2"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img3"
							Grid.Row="0"
							Grid.Column="3"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img4"
							Grid.Row="1"
							Grid.Column="0"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img5"
							Grid.Row="1"
							Grid.Column="1"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img6"
							Grid.Row="1"
							Grid.Column="2"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img7"
							Grid.Row="1"
							Grid.Column="3"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img8"
							Grid.Row="2"
							Grid.Column="0"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img9"
							Grid.Row="2"
							Grid.Column="1"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img10"
							Grid.Row="2"
							Grid.Column="2"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img11"
							Grid.Row="2"
							Grid.Column="3"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img12"
							Grid.Row="3"
							Grid.Column="0"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img13"
							Grid.Row="3"
							Grid.Column="1"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img14"
							Grid.Row="3"
							Grid.Column="2"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />

						<ImageButton
							x:Name="img15"
							Grid.Row="3"
							Grid.Column="3"
							Padding="0"
							Aspect="AspectFill"
							BackgroundColor="Black"
							CornerRadius="8"
							HeightRequest="76"
							HorizontalOptions="CenterAndExpand" />
					</Grid>

					<BoxView HeightRequest="20" />
				</StackLayout>
			</ScrollView>

			<Grid
				Grid.Row="3"
				Grid.ColumnSpan="3"
				ColumnSpacing="5"
				RowSpacing="0">
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition Height="20" />
				</Grid.RowDefinitions>
				<Label
					Grid.Row="0"
					Grid.Column="0"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="25"
					HorizontalTextAlignment="Center"
					Text="{x:Static fontawesome:DstrictsAppFlatIcons.HomeOutline}"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="0"
					Grid.Column="1"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="25"
					HorizontalTextAlignment="Center"
					Text="{x:Static fontawesome:DstrictsAppFlatIcons.SearchIcon}"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />

				<Button
					Grid.Row="0"
					Grid.RowSpan="2"
					Grid.Column="2"
					Padding="0"
					BackgroundColor="#6263ED"
					CornerRadius="22"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="25"
					HeightRequest="44"
					HorizontalOptions="CenterAndExpand"
					Text="{x:Static fontawesome:DstrictsAppFlatIcons.Plus}"
					TextColor="White"
					VerticalOptions="CenterAndExpand"
					WidthRequest="44" />

				<Label
					Grid.Row="0"
					Grid.Column="3"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="25"
					HorizontalTextAlignment="Center"
					Text="{x:Static fontawesome:DstrictsAppFlatIcons.BellOutline}"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="0"
					Grid.Column="4"
					FontFamily="{StaticResource MaterialFontFamily}"
					FontSize="25"
					HorizontalTextAlignment="Center"
					Text="{x:Static fontawesome:DstrictsAppFlatIcons.AccountOutline}"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="1"
					Grid.Column="0"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="16"
					HorizontalTextAlignment="Center"
					MaxLines="1"
					Text="Menu"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="1"
					Grid.Column="1"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="16"
					HorizontalTextAlignment="Center"
					MaxLines="1"
					Text="Book table"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="1"
					Grid.Column="3"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="16"
					HorizontalTextAlignment="Center"
					MaxLines="1"
					Text="Drop in"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />

				<Label
					Grid.Row="1"
					Grid.Column="4"
					FontFamily="PoppinsRegularFontFamily"
					FontSize="16"
					HorizontalTextAlignment="Center"
					MaxLines="1"
					Text="Member"
					TextColor="#5B5B79"
					VerticalTextAlignment="Center" />
			</Grid>
		</Grid>
	</ContentPage.Content>
</ContentPage>
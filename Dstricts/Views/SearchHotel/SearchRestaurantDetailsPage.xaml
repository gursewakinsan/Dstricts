					<Label
						Margin="0,20,0,5"
						FontFamily="SansProBoldFontFamily"
						FontSize="20"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="Wifi"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Grid ColumnSpacing="0" RowSpacing="0">

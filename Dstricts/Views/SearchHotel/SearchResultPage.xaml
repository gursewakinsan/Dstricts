<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="Dstricts.Views.SearchHotel.SearchResultPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:Dstricts.Controls"
	xmlns:fontawesome="clr-namespace:Dstricts.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="Black"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition Height="15" />
				<RowDefinition Height="45" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="80" />
			</Grid.ColumnDefinitions>

			<Label
				Grid.Row="0"
				Grid.Column="0"
				Margin="15,0,0,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Start"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.ArrowLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<Label
				Grid.Row="0"
				Grid.Column="2"
				Margin="0,0,10,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="End"
				Text="{x:Static fontawesome:DstrictsAppFlatIcons.DotsVertical}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<Frame
				Grid.Row="2"
				Grid.ColumnSpan="3"
				Margin="20,0,20,0"
				Padding="16,0,16,0"
				BackgroundColor="#1F1F23"
				CornerRadius="8"
				HasShadow="False"
				IsClippedToBounds="True">
				<Grid ColumnSpacing="10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="20" />
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="20" />
					</Grid.ColumnDefinitions>
					<Label
						Grid.Row="0"
						Grid.Column="0"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="25"
						HorizontalTextAlignment="Center"
						Text="{x:Static fontawesome:DstrictsAppFlatIcons.SearchIcon}"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<controls:CustomEntry
						x:Name="searchBar"
						Grid.Row="0"
						Grid.Column="1"
						BackgroundColor="Transparent"
						FontFamily="SansProRegularFontFamily"
						FontSize="14"
						Placeholder="Search"
						PlaceholderColor="White"
						ReturnCommand="{Binding SearchButtonCommand}"
						ReturnType="Search"
						Text="{Binding SearchText}"
						TextChanged="OnSearchBarTextChanged"
						TextColor="White"
						VerticalOptions="CenterAndExpand" />

					<Label
						x:Name="iconClearSearchBar"
						Grid.Row="0"
						Grid.Column="2"
						FontFamily="{StaticResource MaterialFontFamily}"
						FontSize="25"
						HorizontalTextAlignment="Center"
						IsVisible="False"
						Text="{x:Static fontawesome:DstrictsAppFlatIcons.Close}"
						TextColor="White"
						VerticalTextAlignment="Center">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Tapped="OnClearSearchBarTapped" />
						</Label.GestureRecognizers>
					</Label>
				</Grid>
			</Frame>

			<ListView
				x:Name="listSearchResult"
				Grid.Row="3"
				Grid.ColumnSpan="3"
				Margin="20,15,20,10"
				BackgroundColor="Transparent"
				CachingStrategy="RecycleElement"
				HasUnevenRows="True"
				ItemTapped="OnSearchResultItemTapped"
				ItemsSource="{Binding SearchResult}"
				SeparatorVisibility="None"
				VerticalScrollBarVisibility="Never">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<Grid Margin="0,10,0,10" ColumnSpacing="12">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="44" />
									<ColumnDefinition Width="*" />
								</Grid.ColumnDefinitions>

								<ImageButton
									Grid.Row="0"
									Grid.Column="0"
									Padding="0"
									Aspect="AspectFill"
									BackgroundColor="Transparent"
									CornerRadius="22"
									HeightRequest="44"
									Source="{Binding UserImage}"
									VerticalOptions="Start"
									WidthRequest="44" />

								<StackLayout
									Grid.Row="0"
									Grid.Column="1"
									Spacing="5"
									VerticalOptions="StartAndExpand">
									<Label
										FontFamily="SansProBoldFontFamily"
										FontSize="14"
										HorizontalTextAlignment="Start"
										MaxLines="1"
										Text="{Binding Name}"
										TextColor="White"
										VerticalTextAlignment="Start" />

									<Label
										FontFamily="SansProRegularFontFamily"
										FontSize="14"
										HorizontalTextAlignment="Start"
										Text="Seen 6h ago"
										TextColor="#757575"
										VerticalTextAlignment="Start" />
								</StackLayout>
							</Grid>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>

			<ListView
				x:Name="listSearchSuggestion"
				Grid.Row="3"
				Grid.ColumnSpan="3"
				Margin="20,5,20,0"
				BackgroundColor="White"
				CachingStrategy="RecycleElement"
				HeightRequest="150"
				IsVisible="{Binding IsSearchSuggestion}"
				ItemTapped="OnSearchSuggestionItemTapped"
				ItemsSource="{Binding SearchSuggestionList}"
				VerticalOptions="StartAndExpand"
				VerticalScrollBarVisibility="Never">
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<Grid ColumnSpacing="5">
								<Grid.RowDefinitions>
									<RowDefinition Height="50" />
								</Grid.RowDefinitions>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="40" />
									<ColumnDefinition />
									<ColumnDefinition Width="40" />
								</Grid.ColumnDefinitions>

								<Label
									Grid.Column="0"
									FontFamily="{StaticResource MaterialFontFamily}"
									FontSize="20"
									HorizontalTextAlignment="Center"
									Text="{x:Static fontawesome:DstrictsAppFlatIcons.SearchIcon}"
									TextColor="#FF464859"
									VerticalTextAlignment="Center" />

								<Label
									Grid.Column="1"
									FontFamily="SansProRegularFontFamily"
									FontSize="16"
									HorizontalTextAlignment="Start"
									LineBreakMode="TailTruncation"
									MaxLines="1"
									Text="{Binding FirstName}"
									TextColor="#FF464859"
									VerticalTextAlignment="Center" />

								<Label
									Grid.Column="2"
									FontFamily="{StaticResource MaterialFontFamily}"
									FontSize="20"
									HorizontalTextAlignment="Center"
									Text="{x:Static fontawesome:DstrictsAppFlatIcons.ArrowTopLeft}"
									TextColor="#FF464859"
									VerticalTextAlignment="Center" />
							</Grid>
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</Grid>
	</ContentPage.Content>
</ContentPage>
                        IsClippedToBounds="True"
                        HasShadow="False"
                        WidthRequest="24"
                        HeightRequest="24"
                        Padding="0"
                        BackgroundColor="#FF0000"
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="EndAndExpand"
                        Grid.Row="1"
			            Grid.Column="0">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg4RemovedTapped"/>
                        </Frame.GestureRecognizers>
                        <Label
			                FontFamily="{StaticResource MaterialFontFamily}"
			                FontSize="15"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
			                Text="{x:Static fontawesome:DstrictsAppFlatIcons.Close}"
			                TextColor="White">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnImg4RemovedTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>

                    <ImageButton 
                         x:Name="img5"
                        Grid.Row="1"
                        Grid.Column="1"
                        Aspect="AspectFill"
                        CornerRadius="12"
                        Clicked="OnImg5Clicked"
                        BackgroundColor="#242A37"/>
                    <Label
                        IsVisible="{Binding Image_5, Converter={StaticResource InverseBoolConverter}}"
			            Grid.Row="1"
			            Grid.Column="1"
			            FontFamily="{StaticResource MaterialFontFamily}"
			            FontSize="40"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
			            Text="{x:Static fontawesome:DstrictsAppFlatIcons.Plus}"
			            TextColor="White">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg5Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Frame
                        IsVisible="{Binding Image_5}"
                        Margin="5"
                        CornerRadius="12"
                        IsClippedToBounds="True"
                        HasShadow="False"
                        WidthRequest="24"
                        HeightRequest="24"
                        Padding="0"
                        BackgroundColor="#FF0000"
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="EndAndExpand"
                        Grid.Row="1"
			            Grid.Column="1">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg5RemovedTapped"/>
                        </Frame.GestureRecognizers>
                        <Label
			                FontFamily="{StaticResource MaterialFontFamily}"
			                FontSize="15"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
			                Text="{x:Static fontawesome:DstrictsAppFlatIcons.Close}"
			                TextColor="White">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnImg5RemovedTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>


                    <ImageButton 
                         x:Name="img6"
                        Grid.Row="1"
                        Grid.Column="2"
                        Aspect="AspectFill"
                        CornerRadius="12"
                        Clicked="OnImg6Clicked"
                        BackgroundColor="#242A37"/>
                    <Label
                         IsVisible="{Binding Image_6, Converter={StaticResource InverseBoolConverter}}"
			            Grid.Row="1"
			            Grid.Column="2"
			            FontFamily="{StaticResource MaterialFontFamily}"
			            FontSize="40"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
			            Text="{x:Static fontawesome:DstrictsAppFlatIcons.Plus}"
			            TextColor="White">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg6Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Frame
                        IsVisible="{Binding Image_6}"
                        Margin="5"
                        CornerRadius="12"
                        IsClippedToBounds="True"
                        HasShadow="False"
                        WidthRequest="24"
                        HeightRequest="24"
                        Padding="0"
                        BackgroundColor="#FF0000"
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="EndAndExpand"
                        Grid.Row="1"
			            Grid.Column="2">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg6RemovedTapped"/>
                        </Frame.GestureRecognizers>
                        <Label
			                FontFamily="{StaticResource MaterialFontFamily}"
			                FontSize="15"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
			                Text="{x:Static fontawesome:DstrictsAppFlatIcons.Close}"
			                TextColor="White">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnImg6RemovedTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>


                    <ImageButton 
                         x:Name="img7"
                        Grid.Row="2"
                        Grid.Column="0"
                        Aspect="AspectFill"
                        CornerRadius="12"
                        Clicked="OnImg7Clicked"
                        BackgroundColor="#242A37"/>
                    <Label
			            Grid.Row="2"
			            Grid.Column="0"
                         IsVisible="{Binding Image_7, Converter={StaticResource InverseBoolConverter}}"
			            FontFamily="{StaticResource MaterialFontFamily}"
			            FontSize="40"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
			            Text="{x:Static fontawesome:DstrictsAppFlatIcons.Plus}"
			            TextColor="White">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg7Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Frame
                        IsVisible="{Binding Image_7}"
                        Margin="5"
                        CornerRadius="12"
                        IsClippedToBounds="True"
                        HasShadow="False"
                        WidthRequest="24"
                        HeightRequest="24"
                        Padding="0"
                        BackgroundColor="#FF0000"
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="EndAndExpand"
                        Grid.Row="2"
			            Grid.Column="0">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg7RemovedTapped"/>
                        </Frame.GestureRecognizers>
                        <Label
			                FontFamily="{StaticResource MaterialFontFamily}"
			                FontSize="15"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
			                Text="{x:Static fontawesome:DstrictsAppFlatIcons.Close}"
			                TextColor="White">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnImg7RemovedTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>

                    <ImageButton 
                         x:Name="img8"
                        Grid.Row="2"
                        Grid.Column="1"
                        Aspect="AspectFill"
                        CornerRadius="12"
                        Clicked="OnImg8Clicked"
                        BackgroundColor="#242A37"/>
                    <Label
			            Grid.Row="2"
			            Grid.Column="1"
			            FontFamily="{StaticResource MaterialFontFamily}"
			            FontSize="40"
                         IsVisible="{Binding Image_8, Converter={StaticResource InverseBoolConverter}}"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
			            Text="{x:Static fontawesome:DstrictsAppFlatIcons.Plus}"
			            TextColor="White">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg8Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Frame
                        IsVisible="{Binding Image_8}"
                        Margin="5"
                        CornerRadius="12"

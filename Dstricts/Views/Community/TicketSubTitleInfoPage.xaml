                        HasShadow="False"
                        WidthRequest="24"
                        HeightRequest="24"
                        Padding="0"
                        BackgroundColor="#FF0000"
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="EndAndExpand"
                        Grid.Row="2"
			            Grid.Column="1">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg8RemovedTapped"/>
                        </Frame.GestureRecognizers>
                        <Label
			                FontFamily="{StaticResource MaterialFontFamily}"
			                FontSize="15"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand"
			                Text="{x:Static fontawesome:DstrictsAppFlatIcons.Close}"
			                TextColor="White">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnImg8RemovedTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>


                    <ImageButton 
                         x:Name="img9"
                        Grid.Row="2"
                        Grid.Column="2"
                        Aspect="AspectFill"
                        CornerRadius="12"
                        Clicked="OnImg9Clicked"
                        BackgroundColor="#242A37"/>
                    <Label
                         IsVisible="{Binding Image_9, Converter={StaticResource InverseBoolConverter}}"
			            Grid.Row="2"
			            Grid.Column="2"
			            FontFamily="{StaticResource MaterialFontFamily}"
			            FontSize="40"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
			            Text="{x:Static fontawesome:DstrictsAppFlatIcons.Plus}"
			            TextColor="White">
                         <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnImg9Clicked"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Frame
                        IsVisible="{Binding Image_9}"
                        Margin="5"
                        CornerRadius="12"
                        IsClippedToBounds="True"
                        HasShadow="False"
                        WidthRequest="24"
                        HeightRequest="24"
                        Padding="0"
                        BackgroundColor="#FF0000"

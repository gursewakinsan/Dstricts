<?xml version="1.0" encoding="utf-8" ?>
<Application
	x:Class="Dstricts.App"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:converters="clr-namespace:Dstricts.Converters">
	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="Primary" />
			<Color x:Key="PrimaryDark">#000000</Color>
			<Color x:Key="Accent">#96d1ff</Color>
			<Color x:Key="LightBackgroundColor">#FAFAFA</Color>
			<Color x:Key="DarkBackgroundColor">#C0C0C0</Color>
			<Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
			<Color x:Key="LightTextColor">#999999</Color>
			<Color x:Key="AppBg">#3623B7</Color>

			<Style TargetType="NavigationPage">
				<Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
				<Setter Property="BarTextColor" Value="Black" />
			</Style>

			<OnPlatform
				x:Key="MaterialFontFamily"
				x:TypeArguments="x:String"
				Android="materialdesignicons-webfont.ttf#Material Design Icons"
				iOS="Material Design Icons" />

            <OnPlatform
				x:Key="MaterialIconFont1Family"
				x:TypeArguments="x:String"
				Android="IconFont1.ttf#IconFont1"
				iOS="IconFont1" />

            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
		</ResourceDictionary>
	</Application.Resources>
</Application>